<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">50</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <views>50,500</views>
    <onload>SetProperty(Window.HasSettings,True,home)</onload>
    <onload>ClearProperty(MediaMenu,Home)</onload>
    <onload>Skin.SetString(SectionType,channels)</onload>
    <onunload>Skin.Reset(SectionType)</onunload>
    <onunload>ClearProperty(Window.HasSettings,Home)</onunload>
    <controls>
        <include>CommonBackground</include>
        <control type="group">
            <include>Window_OpenClose_Animation</include>
            <include>AddonList</include>
            <!-- view id = 50 -->
            <include>AddonWall</include>
            <!-- view id = 500 -->
        </control>
        <control type="group">
            <visible>Control.IsVisible(54) | Control.IsVisible(500) | Control.IsVisible(57)</visible>
            <visible>!Window.IsActive(addoninformation)</visible>
            <animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
            <include>Window_OpenClose_Animation</include>
            <posy>-30</posy>
            <control type="group">
                <posx>410</posx>
                <posy>1010</posy>
                <visible>Control.IsVisible(54)</visible>
                <control type="label">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>1100</width>
                    <height>42</height>
                    <aligny>top</aligny>
                    <align>center</align>
                    <font>font16_title</font>
                    <textcolor>white</textcolor>
                    <scroll>true</scroll>
                    <label>[B]$INFO[ListItem.Label][/B]</label>
                    <textoffsety>-2</textoffsety>
                    <textoffsetx>30</textoffsetx>
                </control>
                <control type="label">
                    <posx>-300</posx>
                    <posy>40</posy>
                    <width>1700</width>
                    <height>30</height>
                    <align>center</align>
                    <font>font13_title</font>
                    <textcolor>white</textcolor>
                    <scroll>true</scroll>
                    <label>$INFO[ListItem.Property(Addon.Summary)]</label>
                    <textoffsetx>30</textoffsetx>
                </control>
            </control>
            <control type="group">
                <visible>Control.IsVisible(500) | Control.IsVisible(57)</visible>
                <animation effect="slide" start="0" end="40" time="720" tween="cubic" easing="inout" condition="Control.IsVisible(57)">Conditional</animation>
                <animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
                <control type="group">
                    <posx>90</posx>
                    <posy>1010</posy>
                    <control type="label">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1150</width>
                        <height>42</height>
                        <aligny>top</aligny>
                        <align>left</align>
                        <font>font16_title</font>
                        <textcolor>white</textcolor>
                        <scroll>true</scroll>
                        <label>[B]$INFO[ListItem.Label][/B]</label>
                        <textoffsety>-2</textoffsety>
                        <textoffsetx>30</textoffsetx>
                    </control>
                    <control type="label">
                        <posx>0</posx>
                        <posy>45</posy>
                        <width>1500</width>
                        <height>30</height>
                        <align>left</align>
                        <font>font13_title</font>
                        <textcolor>white</textcolor>
                        <scroll>true</scroll>
                        <label>$INFO[ListItem.Property(Addon.Summary)]</label>
                        <textoffsetx>30</textoffsetx>
                    </control>
                </control>
                <control type="label">
                    <posx>1800</posx>
                    <posy>1000</posy>
                    <width>198</width>
                    <height>90</height>
                    <align>right</align>
                    <label>$INFO[ListItem.Property(Addon.Version),[B],[/B]]</label>
                    <font>font35_title</font>
                    <textcolor>white</textcolor>
                    <wrapmultiline>true</wrapmultiline>
                </control>
            </control>
            <control type="image">
                <posx>0</posx>
                <posy>970</posy>
                <width>1920</width>
                <height>140</height>
                <texture border="1">gradient_floor.png</texture>
            </control>
        </control>
		
        <include>ScrollOffsetLabel</include>
        <control type="group">
            <animation effect="slide" start="0,-90" end="0,0" delay="800" time="480" condition="Window.Previous(home)">WindowOpen</animation>
            <animation effect="slide" end="0,-90" start="0,0" time="480" condition="Window.Next(home)">WindowClose</animation>
            <visible>!Control.IsVisible(609)</visible>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>66</height>
                <texture border="1">topbar.png</texture>
            </control>
            <control type="label">
                <width>900</width>
                <height>90</height>
                <font>font13_title</font>
                <textoffsetx>15</textoffsetx>
                <textcolor>grey2</textcolor>
                <align>left</align>
                <aligny>top</aligny>
                <textoffsety>-2</textoffsety>
                <label>$LOCALIZE[31970]</label>
            </control>
            <control type="label">
                <posx>1920</posx>
                <width>900</width>
                <height>90</height>
                <font>font13_title</font>
                <textoffsetx>15</textoffsetx>
                <textcolor>grey2</textcolor>
                <align>right</align>
                <aligny>top</aligny>
                <textoffsety>-2</textoffsety>
                <label>$INFO[Container.NumItems,, $LOCALIZE[31025]]$INFO[Container.CurrentPage,[COLOR grey3] | ,]$INFO[Container.NumPages,/,[/COLOR]]</label>
            </control>
            <control type="label">
                <posx>0</posx>
                <width>1920</width>
                <height>90</height>
                <font>font13_title</font>
                <textoffsetx>15</textoffsetx>
                <textcolor>grey2</textcolor>
                <align>center</align>
                <aligny>top</aligny>
                <textoffsety>-2</textoffsety>
                <label>$INFO[System.Time]</label>
            </control>
            <control type="group">
                <visible>Player.HasMedia + ![Window.IsActive(volumebar)]</visible>
                <animation effect="slide" start="0,-60" end="0,0" time="200">Visible</animation>
                <animation effect="slide" start="0,0" end="0,-60" time="200">Hidden</animation>
                <posx>1080</posx>
                <control type="progress">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>500</width>
                    <height>37</height>
                    <texturebg border="2">osd/texturebg.png</texturebg>
                    <lefttexture>-</lefttexture>
                    <midtexture border="2">osd/midtexture_cache.png</midtexture>
                    <righttexture>-</righttexture>
                    <overlaytexture>-</overlaytexture>
                    <info>Player.ProgressCache</info>
                </control>
                <control type="progress">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>500</width>
                    <height>35</height>
                    <texturebg border="1">osd/texturebg_cache.png</texturebg>
                    <lefttexture>-</lefttexture>
                    <midtexture border="2">osd/midtexture.png</midtexture>
                    <righttexture>-</righttexture>
                    <overlaytexture>-</overlaytexture>
                    <info>Player.Progress</info>
                </control>
                <control type="label">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>500</width>
                    <height>90</height>
                    <font>font13_title</font>
                    <textoffsetx>10</textoffsetx>
                    <textcolor>grey</textcolor>
                    <shadowcolor>AA000000</shadowcolor>
                    <align>left</align>
                    <aligny>top</aligny>
                    <textoffsety>-2</textoffsety>
                    <scroll>true</scroll>
                    <label>$INFO[Player.Title]</label>
                </control>
            </control>
        </control>
        
		<control type="group">
            <posx>-440</posx>
            <animation effect="slide" start="440,0" end="0,0" time="400" tween="quadratic" easing="out" condition="IsEmpty(Window(home).Property(MediaMenu))">Conditional</animation>
            <animation effect="slide" start="0,0" end="-440,0" time="400" tween="quadratic" easing="out">WindowClose</animation>
            <posy>0</posy>
            <!-- Display Side Blade Menu Background -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>440</width>
                <height>1080</height>
                <texture border="40">mediamenu_back.png</texture>
            </control>
            <!-- Display Aeon Nox Logo -->
            <control type="image">
                <description>LOGO</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>400</width>
                <height>120</height>
                <aspectratio>keep</aspectratio>
                <texture>aeon-nox-logo.png</texture>
            </control>
			
            <!-- Icon Menu -->
            <control type="group" id="9050">
                <visible>!Container.PlexContent(Movie) + !Container.PlexContent(Episode) + !Container.PlexContent(Clip)</visible>
                <posy>100</posy>
                <posx>350</posx>
                <width>35</width>
                <orientation>vertical</orientation>
                <itemgap>0</itemgap>
				
                <!-- Close Sideblade -->
                <control type="button" id="104">
                    <texturefocus border="0"></texturefocus>
                    <texturenofocus border="0"></texturenofocus>
                    <posy>60</posy>
                    <width>60</width>
                    <height>35</height>
                    <textoffsetx>15</textoffsetx>
                    <textcolor>grey</textcolor>
                    <focusedcolor>blue</focusedcolor>
                    <textwidth>300</textwidth>
                    <aligny>center</aligny>
                    <onleft>200</onleft>
                    <onright>ClearProperty(MediaMenu,Home)</onright>
                    <onright>50</onright>
                    <onup>108</onup>
                    <ondown>105</ondown>
                    <onback>ClearProperty(MediaMenu,Home)</onback>
                    <onback>50</onback>
                    <font>IconTiny</font>
                    <label></label>
                    <onclick>ClearProperty(MediaMenu,Home)</onclick>
                    <onclick>50</onclick>
                    <onclick>Control.SetFocus(50)</onclick>
                    <visible>![Window.IsActive(501) + Container.PlexFilter(recentlyAdded)] + !Container.PlexFilter(recentlyViewedShows)</visible>
                </control>
				
                <!-- Home Button -->
                <control type="button" id="105">
                    <texturefocus border="0"></texturefocus>
                    <texturenofocus border="0"></texturenofocus>
                    <posy>95</posy>
                    <width>60</width>
                    <height>35</height>
                    <textoffsetx>15</textoffsetx>
                    <textcolor>grey</textcolor>
                    <focusedcolor>blue</focusedcolor>
                    <textwidth>300</textwidth>
                    <aligny>center</aligny>
                    <onleft>200</onleft>
                    <onright>ClearProperty(MediaMenu,Home)</onright>
                    <onright>50</onright>
                    <onup>104</onup>
                    <ondown>108</ondown>
                    <onback>ClearProperty(MediaMenu,Home)</onback>
                    <onback>50</onback>
                    <font>IconTiny</font>
                    <label>↸</label>
                    <onclick>ActivateWindow(home)</onclick>
                    <visible>![Window.IsActive(501) + Container.PlexFilter(recentlyAdded)] + !Container.PlexFilter(recentlyViewedShows)</visible>
                </control>
                       
                <!-- Change Viewtype -->
                <control type="button" id="108">
                    <texturefocus border="0"></texturefocus>
                    <texturenofocus border="0"></texturenofocus>
                    <description>View As button</description>
                    <posy>130</posy>
                    <width>60</width>
                    <height>35</height>
                    <textoffsetx>15</textoffsetx>
                    <textcolor>grey</textcolor>
                    <focusedcolor>blue</focusedcolor>
                    <textwidth>300</textwidth>
                    <aligny>center</aligny>
                    <font>IconTiny</font>
                    <onleft>200</onleft>
                    <onright>ClearProperty(MediaMenu,Home)</onright>
                    <onright>50</onright>
                    <onup>105</onup>
                    <ondown>104</ondown>
                    <onback>ClearProperty(MediaMenu,Home)</onback>
                    <onback>50</onback>
                    <onclick>Container.NextViewMode</onclick>
                    <label></label>
                </control>
                
            </control>
            <!-- Options Menu -->
            <control type="grouplist" id="200">
                
                <posx>0</posx>
                <posy>100</posy>
                <zorder>10</zorder>
                <width>350</width>
                <height>1080</height>
                <onright>9050</onright>
                <onback>9050</onback>
                <onleft>9050</onleft>
                <!-- View Options Title -->
                <control type="label" id="201">
                    <width>350</width>
                    <height>52</height>
                    <textoffsetx>15</textoffsetx>
                    <font>font13_title</font>
                    <label>31006</label>
                    <textcolor>$VAR[Colour_ThemeColourVar]</textcolor>
                    <aligny>center</aligny>
                </control>
                <!-- Change View type -->
                <control type="button" id="2">
                    <description>View As button</description>
                    <posy>60</posy>
                    <textwidth>350</textwidth>
                    <width>350</width>
                    <height>60</height>
                    <textoffsetx>15</textoffsetx>
                    <textcolor>grey</textcolor>
                    <focusedcolor>white</focusedcolor>
                    <aligny>center</aligny>
                    <font>font13</font>
                    <onclick>Container.NextViewMode</onclick>
                    <label>-</label>
                </control>
				
                <!-- Toggle Background -->
                <control type="button" id="203">
                    <description>Toggle Background</description>
                    <posy>120</posy>
                    <!--<textwidth>200</textwidth>-->
                    <width>350</width>
                    <height>60</height>
                    <textoffsetx>15</textoffsetx>
                    <textcolor>grey</textcolor>
                    <focusedcolor>white</focusedcolor>
                    <textwidth>300</textwidth>
                    <aligny>center</aligny>
                    <font>font13</font>
                    <label>$LOCALIZE[42012]</label>
                    <onclick>ActivateWindow(1122)</onclick>
                    <visible>!Container.Content(genres)</visible>
                </control>
            </control>
            
        </control>
    </controls>
</window>
