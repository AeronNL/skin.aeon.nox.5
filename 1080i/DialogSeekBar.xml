<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>1</defaultcontrol>
	<visible>[Window.IsActive(VideoOSD) | Window.IsActive(fullscreeninfo) | Player.Seeking | Player.DisplayAfterSeek | Player.Caching] + Window.IsActive(FullScreenVideo)</visible>
	<zorder>1</zorder>
	<controls>
		<control type="group">
			<visible>![Window.IsVisible(SliderDialog) | Window.IsVisible(VideoBookmarks) | Window.IsVisible(1115) | Window.IsVisible(10204)] + !Skin.HasSetting(Enable.ScreenshotMode)</visible>
			<include>Animation_OpenCloseFade</include>
            <include>Animation_FadedByOSDSettings</include>
			<include>OSD_Player_Banner</include>
			<include>OSD_Progress_Bar2</include> 
			<include>MediaInfo2</include>
		</control>
		
		<control type="grouplist" id="2001">
			<animation effect="fade" start="0" end="100" time="200">Visible</animation>
			<animation effect="fade" start="100" end="0" time="200">Hidden</animation>
			<animation effect="slide" end="-268,0" time="0" condition="StringCompare(Skin.String(VideoOSDPosterStyle),$LOCALIZE[42093])">Conditional</animation>
			<include>Animation_OpenCloseFade</include>
            <include>Animation_FadedByOSDSettings</include>
		
			<posx>298</posx>
            <posy>975</posy>
            <width>1577</width>
            <itemgap>0</itemgap>
            <orientation>horizontal</orientation>
            <onleft>709</onleft>
            <onright>11</onright>
            <onup>noop</onup>
            <ondown>noop</ondown>
			<visible>!Window.IsActive(VideoOSD) + [Player.Seeking | Player.DisplayAfterSeek | Player.Caching] + Window.IsActive(FullScreenVideo) + !Skin.HasSetting(Enable.ScreenshotMode)</visible>
				
			<!-- OSD Playlist Button -->
            <control type="image">
                <description>Playlists</description>
                <height>100</height>
                <width>100</width>
				<texture>osd/buttons/osdplaylistnf.png</texture>
            </control>  
								
			<!-- OSD Bookmarks Button -->
            <control type="image">
                <description>Bookmarks</description>
                <height>100</height>
                <width>100</width>
                <texture>osd/buttons/osdbookmarksnf.png</texture>
            </control>
								
			<!-- OSD Subtitles Button -->
            <control type="image">
                <description>OSD Subtitles</description>
                <height>100</height>
                <width>100</width>
                <texture>osd/buttons/osdsubtitlesnf.png</texture>
            </control>
				
			<!-- OSD Previous Button -->
            <control type="image">
                <description>Previous</description>
                <height>100</height>
                <width>100</width>
                <texture>osd/buttons/osdprevtracknf.png</texture>
            </control>
				
			<!-- OSD Rewind Button -->
            <control type="image">
                <description>Rewind</description>
                <height>100</height>
                <width>100</width>
                <texture>osd/buttons/osdrewindnf.png</texture>
            </control>
				
			<!-- OSD Stop Button -->
            <control type="image">
                <description>Stop</description>
                <height>100</height>
                <width>100</width>
                <texture>osd/buttons/osdstopnf.png</texture>
            </control>
				
			<!-- OSD Play/Pause Button -->
            <control type="image">
                <description>Play</description>
                <height>100</height>
                <width>100</width>
                <texture>osd/buttons/osdpausenf.png</texture>
            </control>
				
			<!-- OSD Fast Forward Button -->
            <control type="image">
                <description>Forward</description>
                <height>100</height>
                <width>100</width>
                <texture>osd/buttons/osdforwardnf.png</texture>
            </control>
				
			<!-- OSD Next Button -->
            <control type="image">
                <description>Next</description>
                <height>100</height>
                <width>100</width>
                <texture>osd/buttons/osdnexttracknf.png</texture>
            </control>
				
			<!-- OSD Video Settings -->
            <control type="image">
                <description>Video Settings</description>
                <height>100</height>
                <width>100</width>
                <texture>osd/buttons/osdvideonf.png</texture>
            </control>
				
			<!-- OSD Audio Settings -->
            <control type="image">
                <description>Audio Settings</description>
                <height>100</height>
                <width>100</width>
                <texture>osd/buttons/osdaudionf.png</texture>
            </control>
				
			<!-- OSD Options -->
			<control type="image">
				<texture>osd/buttons/OSDSkinNF.png</texture>
				<width>100</width>
				<height>100</height>
			</control>
        </control>	
		
		<!-- Seek Offset Display -->
		<control type="label">
			<animation effect="fade" start="0" end="100" time="200">Visible</animation>
			<animation effect="fade" start="100" end="0" time="200">Hidden</animation>
			<label>$INFO[Player.SeekOffset]</label>
			<posx>30</posx>
			<posy>66</posy>
			<width>748</width>
			<height>150</height>
			<textoffsetx>0</textoffsetx>
			<align>left</align>
			<aligny>center</aligny>
			<font>font_MainMenu</font>
			<shadowcolor>44000000</shadowcolor>
			<textcolor>DDe5e5e5</textcolor>
			<include>VisibleFadeEffect</include>
			<visible>!Window.IsActive(VideoOSD) + [Player.Seeking | Player.DisplayAfterSeek | Player.Caching] + Window.IsActive(FullScreenVideo) + !Skin.HasSetting(Enable.ScreenshotMode)</visible>
		</control>	
	</controls>
</window>