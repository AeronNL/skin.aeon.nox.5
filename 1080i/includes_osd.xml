	<include name="OSD_DVDBlurayDisc">
		<control type="image">
			<visible>StringCompare(Skin.String(OSD.SpinningDiscStyle),DVD/Bluray) + !StringCompare(Skin.String(OSD.VideoIconStyle),Disabled) + !StringCompare(Skin.String(SectionType),homemovies)</visible>
			<posx>137</posx>
			<posy>746</posy>
			<width>277</width>
			<height>277</height>
			<aligny>top</aligny>
			<aspectratio align="left">keep</aspectratio>
			<fadetime>300</fadetime>
			<animation effect="rotate" end="-360" center="auto" time="5000" loop="true" reversible="false" condition="!Player.Paused + !Player.Rewinding + !Player.Forwarding">Conditional</animation>
			<animation effect="rotate" end="360" center="auto" time="4165" loop="true" reversible="false" condition="Player.Rewinding2x">Conditional</animation>
			<animation effect="rotate" end="360" center="auto" time="3332" loop="true" reversible="false" condition="Player.Rewinding4x">Conditional</animation>
			<animation effect="rotate" end="360" center="auto" time="2499" loop="true" reversible="false" condition="Player.Rewinding8x">Conditional</animation>
			<animation effect="rotate" end="360" center="auto" time="1666" loop="true" reversible="false" condition="Player.Rewinding16x">Conditional</animation>
			<animation effect="rotate" end="360" center="auto" time="833" loop="true" reversible="false" condition="Player.Rewinding32x">Conditional</animation>
			<animation effect="rotate" end="-360" center="auto" time="4165" loop="true" reversible="false" condition="Player.Forwarding2x">Conditional</animation>
			<animation effect="rotate" end="-360" center="auto" time="3332" loop="true" reversible="false" condition="Player.Forwarding4x">Conditional</animation>
			<animation effect="rotate" end="-360" center="auto" time="2499" loop="true" reversible="false" condition="Player.Forwarding8x">Conditional</animation>
			<animation effect="rotate" end="-360" center="auto" time="1666" loop="true" reversible="false" condition="Player.Forwarding16x">Conditional</animation>
			<animation effect="rotate" end="-360" center="auto" time="833" loop="true" reversible="false" condition="Player.Forwarding32x">Conditional</animation>
			<texture background="true" diffuse="thumbs/cdart_mask.png">$INFO[VideoPlayer.videoResolution,cdart/,.png]</texture>
			<bordersize>30</bordersize>
		</control>
	</include>
	
