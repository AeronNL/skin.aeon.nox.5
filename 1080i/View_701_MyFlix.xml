<?xml version="1.0" encoding="utf-8"?>
<includes>
	<constant name="slide_time">900</constant>
	<constant name="fadeout_time">200</constant>
	<include name="View_701_MyFlix">
		<control type="group">
			<visible>Control.IsVisible(701)</visible>
			<animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
			
			<!-- Display Title -->
			<control type="label">
				<posx>25</posx>
				<posy>-850</posy>
				<font>font_musicviz</font>
				<textcolor>grey</textcolor>
				<label>$INFO[ListItem.Label]</label>
			</control>
			
			<control type="group">
				<posx>10</posx>
				<posy>220</posy>
				<width>1000</width>
				<height>270</height>
				<include>VisibleFadeEffect</include>
				<textcolor>grey</textcolor>
				<visible></visible>
				
				<control type="group">
					<animation effect="slide" start="0" end="0,-50" time="620" tween="cubic" easing="inout" condition="IsEmpty(ListItem.Top250)">Conditional</animation>
					<control type="grouplist">
						<visible>Container.Content(movies)</visible>
						
						<!-- Director -->
						<control type="label">
							<label>[COLOR labelheader]$LOCALIZE[20339]:[/COLOR][CR]$INFO[ListItem.Director]</label>
							<width>650</width>
							<textcolor>grey</textcolor>
							<include>RighListButtonsValues</include>
							<visible>!IsEmpty(ListItem.Director)</visible>
						</control>
						
						<!-- Genre -->
						<control type="label">
							<label>[COLOR labelheader]$LOCALIZE[515]:[/COLOR][CR]$INFO[ListItem.Genre]</label>
							<width>650</width>
							<include>RighListButtonsValues</include>
						</control>
						
						<!-- Year, Rating, Runtime -->
						<control type="label">
							<label>$VAR[VideoSubLabelVar]</label>
							<width>1000</width>
							<height>45</height>
							<textcolor>grey</textcolor>
							<include>RighListButtonsValues</include>
						</control>
					</control>
					<control type="textbox">
						<posy>240</posy>
						<posx>15</posx>
						<label>$VAR[VideoPlotVar3]</label>
						<width>800</width>
						<height>130</height>
						<font>font15</font>
						<textcolor>grey</textcolor>
						<autoscroll delay="3000" time="3000" repeat="4000">true</autoscroll>
					</control>
				</control>
			</control>
			<control type="fixedlist" id="701">
				<posy>530</posy>
				<posx>10</posx>
				<width>1920</width>
				<height>525</height>
				<visible>Container.Content(movies)</visible>
				<onleft>701</onleft>
				<onright>701</onright>
				<onup>SetProperty(MediaMenu,True,home)</onup>
				<onup>SetFocus(9050)</onup>
				<ondown>63</ondown>
				<viewtype label="MyFlix">bigwrap</viewtype>
				<pagecontrol>63</pagecontrol>
				<scrolltime tween="quadratic">300</scrolltime>
				<orientation>horizontal</orientation>
				<preloaditems>2</preloaditems>
				<focusposition>0</focusposition>
				<include>ViewAnimation</include>
				<itemlayout height="525" width="272">
					<include>FlixThumb</include>
					<control type="image">
						<posx>-1</posx>
						<posy>75</posy>
						<width>268</width>
						<height>390</height>
						<texture border="1" colordiffuse="99FFFFFF">black.png</texture>
						<bordersize>20</bordersize>
					</control>
					<control type="image">
						<texture background="true" colordiffuse="99FFFFFF">$VAR[CaseTypePathVar]$VAR[GlobalCaseVar]</texture>
						<include>FlixDVDCoverVars</include>
					</control>
					<include>FlixThumbReflection</include>
				</itemlayout>
				<focusedlayout height="525" width="272">
					<control type="image">
						<texture background="true" fallback="thumbs/boxes/p.png">$VAR[CaseTypePathVar]$VAR[GlobalCaseBackVar]</texture>
						<include>FlixDVDCoverVars</include>
					</control>
					<control type="group">
						<visible>Control.IsVisible(7000)</visible>
						<include>FlixThumb</include>
						<control type="image">
							<texture background="true">$VAR[CaseTypePathVar]$VAR[GlobalCaseVar]</texture>
							<include>FlixDVDCoverVars</include>
							<include>MyFlixModAnimation</include>
						</control>
						<control type="group">
							<include>FlixThumbReflection</include>
							<include>MyFlixModAnimation</include>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="group" id="7000">
				<visible>Container.OnNext | Container.OnPrevious</visible>
				<animation effect="slide" time="slide_time" reversible="false">Hidden</animation>
				<control type="label">
					<include>HiddenObject</include>
				</control>
			</control>
			<control type="group">
				<posy>530</posy>
				<posx>10</posx>
				<visible>!Control.IsVisible(7000)</visible>
				<control type="group">
					<include>FlixThumb</include>
					<include>MyFlixModAnimation</include>
				</control>
				<control type="group">
					<include>FlixThumbReflection</include>
					<include>MyFlixModAnimation</include>
				</control>
				<include>FlixThumbReflectionDVD</include>
				<control type="image">
					<texture background="true">$VAR[CaseTypePathVar]$VAR[GlobalCaseVar]</texture>
					<include>FlixDVDCoverVars</include>
					<include>MyFlixModAnimation</include>
				</control>
				<control type="image">
					<include>WatchedOverlayShowCase</include>
					<texture>$VAR[MyFlixOverlay]</texture>
				</control>
			</control>
			<control type="scrollbar" id="63">
				<posx>110</posx>
				<posy>985</posy>
				<width>1680</width>
				<height>12</height>
				<onup>53</onup>
				<ondown>noop</ondown>
				<texturesliderbackground border="1">-</texturesliderbackground>
				<texturesliderbar border="6,0,6,0">scrollbar/texturesliderbar_hor.png</texturesliderbar>
				<texturesliderbarfocus border="6,0,6,0">scrollbar/texturesliderbarfocus_hor.png</texturesliderbarfocus>
				<textureslidernib>-</textureslidernib>
				<textureslidernibfocus>-</textureslidernibfocus>
				<showonepage>false</showonepage>
				<orientation>horizontal</orientation>
				<animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(63) + !Container.Scrolling">Conditional</animation>
			</control>
		</control>
	</include>
	<include name="FlixThumb">
		<control type="image">
			<posx>-1</posx>
			<posy>75</posy>
			<width>268</width>
			<height>390</height>
			<texture background="true">$INFO[ListItem.Art(bigThumb)]</texture>
			<bordertexture border="20">thumbs/thumb_shadow_aa.png</bordertexture>
			<bordersize>20</bordersize>
		</control>
	</include>
	<include name="FlixThumbReflection">
		<control type="image">
			<posx>19</posx>
			<posy>450</posy>
			<width>228</width>
			<height>402</height>
			<texture background="true" flipy="true" diffuse="thumbs/thumb_diffuse.png">$INFO[ListItem.Art(bigThumb)]</texture>
			<colordiffuse>52FFFFFF</colordiffuse>
		</control>
	</include>
	<include name="FlixThumbReflection">
		<include>FlixThumbReflectionDimensions</include>
		<colordiffuse>d1FFFFFF</colordiffuse>
		<animation effect="fade" start="70" end="70" time="0" condition="true">Conditional</animation>
	</include>
	<include name="FlixDVDCoverVars">
		<posx>-30</posx>
		<posy>60</posy>
		<width>295</width>
		<height>410</height>
		<visible>Skin.HasSetting(Enable.MyFlix.Cases) + Container.Content(movies)</visible>
	</include>
	<include name="FlixThumbReflectionDVD">
		<control type="image">
			<posx>-27</posx>
			<posy>397</posy>
			<width>325</width>
			<height>180</height>
			<colordiffuse>d1FFFFFF</colordiffuse>
			<animation effect="fade" start="70" end="70" time="0" condition="true">Conditional</animation>
			<visible>Skin.HasSetting(usecases) + Skin.HasSetting(clearcases) + [Container.Content(movies) | Container.Content(musicvideos)]</visible>
		</control>
	</include>
</includes>
