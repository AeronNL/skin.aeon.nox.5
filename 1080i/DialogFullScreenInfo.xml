<?xml version="1.0" encoding="utf-8"?>
<window type="dialog" id="142">
	<zorder>0</zorder>
	
	<controls>
				
		<!-- Panel Background (Movies + Episodes) -->
		<control type="image">
			<visible>[VideoPlayer.Content(episodes) | VideoPlayer.Content(movies)] + [!Window.IsActive(videoosd) + !Window.IsActive(1118)]</visible>
			<width>1920</width>
			<height>150</height>
			<texture border="1,1,1,40">topbar.png</texture>
		</control>
		
		<!-- Movies -->
		<control type="group">
			<visible>VideoPlayer.Content(movies) + [!Window.IsActive(videoosd) + !Window.IsActive(1118)]</visible>
			<control type="group">
				<control type="label">
					<align>center</align>
					<label>[B]$INFO[Player.Title][/B] $INFO[VideoPlayer.Year,(,)]</label>
					<posx>505</posx>
					<width>910</width>
					<font>font28_title</font>
					<include>ShowCaseInfoPanelButtonsValues</include>
					<visible>!IsEmpty(Player.Title)</visible>
					<scroll>true</scroll>
				</control>
				<control type="label">
					<align>center</align>
					<posy>55</posy>
					<posx>500</posx>
					<label>[COLOR themecolor]$INFO[VideoPlayer.Genre][/COLOR]</label>
					<font>font16</font>
					<width>920</width>
					<include>ShowCaseInfoPanelButtonsValues</include>
					<visible>!IsEmpty(VideoPlayer.Genre)</visible>
					<scroll>true</scroll>
				</control>
				<control type="label">
					<posx>15</posx>
					<posy>20</posy>
					<label>$INFO[VideoPlayer.Director,[COLOR themecolor]$LOCALIZE[20339]: [/COLOR],]</label>
					<align>left</align>
					<width>490</width>
					<font>font13</font>
					<textcolor>grey2</textcolor>
					<scroll>true</scroll>
				</control>
				<control type="label">
					<posy>20</posy>
					<align>right</align>
					<label>$INFO[VideoPlayer.RatingAndVotes,[COLOR themecolor]Rating:[/COLOR] ,]</label>
					<posx>1905</posx>
					<width>600</width>
					<font>font13</font>
					<textcolor>grey2</textcolor>
					<visible>!IsEmpty(VideoPlayer.RatingAndVotes)</visible>
				</control>
			</control>
		</control>
		
		<!-- Episodes -->
		<control type="group">
			<visible>VideoPlayer.Content(episodes) + [!Window.IsActive(videoosd) + !Window.IsActive(1118)]</visible>
			<control type="group">
				<control type="label">
					<posy>0</posy>
					<posx>475</posx>
					<width>970</width>
					<font>font28_title</font>
					<label>[B]$INFO[VideoPlayer.TvShowTitle][/B]</label>
					<include>ShowCaseInfoPanelButtonsValues</include>
					<visible>!IsEmpty(VideoPlayer.TvShowTitle)</visible>
					<align>center</align>
					<scroll>true</scroll>
				</control>
				<control type="label">
					<posy>55</posy>
					<posx>500</posx>
					<width>920</width>
					<font>font16</font>
					<label>[COLOR themecolor]$INFO[Player.Title][/COLOR]</label>
					<include>ShowCaseInfoPanelButtonsValues</include>
					<visible>!IsEmpty(Player.Title)</visible>
					<align>center</align>
					<scroll>true</scroll>
				</control>
				<control type="grouplist">
					<posx>15</posx>
					<posy>20</posy>
					<width>610</width>
					<itemgap>0</itemgap>
					<orientation>horizontal</orientation>
					<control type="label">
						<label>[COLOR themecolor]$LOCALIZE[20339]: [/COLOR]</label>
						<width>auto</width>
						<font>font13</font>
						<visible>!IsEmpty(VideoPlayer.Director)</visible>
					</control>
					<control type="label">
						<label>$INFO[VideoPlayer.Director, ]</label>
						<width min="0" max="245">auto</width>
						<textcolor>grey2</textcolor>
						<font>font13</font>
						<scroll>true</scroll>
						<visible>!IsEmpty(VideoPlayer.Director)</visible>
					</control>
					<control type="label">
						<label>[COLOR themecolor] â€¢ [/COLOR]</label>
						<font>font13</font>
						<width min="0" max="100">auto</width>
						<visible>!IsEmpty(VideoPlayer.Director) + !IsEmpty(VideoPlayer.RatingAndVotes)</visible>
					</control>
					<control type="label">
						<label>[COLOR themecolor]$LOCALIZE[563]: [/COLOR]</label>
						<font>font13</font>
						<width min="0" max="110">auto</width>
						<visible>IsEmpty(VideoPlayer.Director) + !IsEmpty(VideoPlayer.RatingAndVotes)</visible>
					</control>
					<control type="label">
						<label>[COLOR grey2]$INFO[VideoPlayer.RatingAndVotes][/COLOR]</label>
						<font>font13</font>
						<width min="0" max="200">auto</width>
						<visible>!IsEmpty(VideoPlayer.RatingAndVotes)</visible>
					</control>
					<control type="label">
						<label>[COLOR themecolor]$INFO[VideoPlayer.Season,$LOCALIZE[20373] ,], $LOCALIZE[36906] $INFO[VideoPlayer.Episode][/COLOR]</label>
						<font>font13</font>
						<visible>IsEmpty(VideoPlayer.Director) + IsEmpty(VideoPlayer.RatingAndVotes)</visible>
						<align>left</align>
						<width>auto</width>
					</control>
				</control>
				<control type="label">
					<posy>-1050</posy>
					<label>[COLOR themecolor]$LOCALIZE[20416]:[/COLOR] [COLOR grey2]($INFO[VideoPlayer.Date])[/COLOR]</label>
					<posx>1305</posx>
					<width>600</width>
					<font>font13</font>
					<align>right</align>
					<visible>IsEmpty(VideoPlayer.Director) + IsEmpty(VideoPlayer.RatingAndVotes)</visible>
				</control>
				<control type="label">
					<posy>-1050</posy>
					<label>[COLOR themecolor]$INFO[VideoPlayer.Season,$LOCALIZE[20373] ,], $LOCALIZE[36906] $INFO[VideoPlayer.Episode][/COLOR] [COLOR grey2]($INFO[VideoPlayer.Premiered])[/COLOR]</label>
					<posx>1305</posx>
					<width>600</width>
					<font>font13</font>
					<align>right</align>
					<visible>[!IsEmpty(VideoPlayer.Director) | !IsEmpty(VideoPlayer.RatingAndVotes)]</visible>
				</control>
			</control>
		</control>
		
		<!-- MediaFlags -->
		<control type="group">
			<visible>!Window.IsActive(videoosd) + !Window.IsActive(1118)</visible>
			<posx>10</posx>
			<posy>32</posy>
			<height>90</height>
			
			<!-- Left -->
			<control type="image">
				<width>155</width>
				<include>MediaFlagVars</include>
				<bordersize>2</bordersize>
				<texture>$INFO[VideoPlayer.videoResolution,flags/resolution/,.png]</texture>
			</control>
			<control type="image">
				<posx>150</posx>
				<posy>6</posy>
				<width>155</width>
				<height>80</height>
				<aspectratio>keep</aspectratio>
				<align>center</align>
				<aligny>center</aligny>
				<texture>$INFO[VideoPlayer.VideoCodec,flags/video/,.png]</texture>
			</control>
			
			<!-- Right -->
			<control type="image">
				<posx>1600</posx>
				<posy>4</posy>
				<width>155</width>
				<height>85</height>
				<include>MediaFlagVars</include>
				<texture>$INFO[VideoPlayer.AudioCodec,flags/audio/,.png]</texture>
			</control>
			<control type="image">
				<posx>1750</posx>
				<posy>2</posy>
				<width>155</width>
				<height>85</height>
				<include>MediaFlagVars</include>
				<texture>$INFO[VideoPlayer.AudioChannels,flags/channels/,.png]</texture>
			</control>
		</control>
	</controls>
</window>