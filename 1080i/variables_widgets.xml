<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<!-- Widget Background -->
	<variable name="HomeWidgetBackgroundVar">
		<value condition="StringCompare(Skin.String(Widget.Back),Flat)">homewidgets/bg_flat.png</value>
		<value condition="StringCompare(Skin.String(Widget.Back),Clear)">homewidgets/bg_clear.png</value>
		<value condition="StringCompare(Skin.String(Widget.Back),Clear White)">homewidgets/bg_clearwhite.png</value>
		<value>homewidgets/bg_default.png</value>
	</variable>

	<!-- Widget Background Setting Label -->
	<variable name="WidgetBackLabelVar">
		<value condition="IsEmpty(Skin.String(Widget.Back))">$LOCALIZE[31390]</value>
		<value condition="StringCompare(Skin.String(Widget.Back),Flat)">$LOCALIZE[42191]</value>
		<value condition="StringCompare(Skin.String(Widget.Back),Clear)">$LOCALIZE[42125]</value>
		<value condition="StringCompare(Skin.String(Widget.Back),Clear White)">$LOCALIZE[42192]</value>
	</variable>
	
	<!-- Widget Background Setting -->
	<variable name="WidgetBackVar">
		<value condition="IsEmpty(Skin.String(Widget.Back))">Skin.SetString(Widget.Back,Flat)</value>
		<value condition="StringCompare(Skin.String(Widget.Back),Flat)">Skin.SetString(Widget.Back,Clear)</value>
		<value condition="StringCompare(Skin.String(Widget.Back),Clear)">Skin.SetString(Widget.Back,Clear White)</value>
		<value condition="StringCompare(Skin.String(Widget.Back),Clear White)">Skin.Reset(Widget.Back)</value>
	</variable>
	
	<!-- Widget Poster Image -->
	<variable name="HomeWidgetPosterVar">
		<value condition="!IsEmpty(ListItem.Art(poster))">$INFO[ListItem.Art(poster)]</value>
		<value condition="!IsEmpty(ListItem.Art(tvshow.poster))">$INFO[ListItem.Art(bigGrandparentThumb)]</value>
		<value condition="!IsEmpty(ListItem.Icon)">$INFO[ListItem.Icon]</value>
		<value>$INFO[ListItem.Art(thumb)]</value>
	</variable>
	
	<!-- Widget Transparency -->
	<variable name="HomeWidgetTransVar">
		<value condition="StringCompare(Skin.String(Widget.Trans),90)">EEFFFFFF</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),80)">DDFFFFFF</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),70)">CCFFFFFF</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),60)">BBFFFFFF</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),50)">AAFFFFFF</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),40)">99FFFFFF</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),30)">88FFFFFF</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),20)">77FFFFFF</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),10)">66FFFFFF</value>
		<value>FFFFFFFF</value>
	</variable>	
	
	<!-- Widget Transparency Setting -->
	<variable name="WidgetTransVar">
		<value condition="IsEmpty(Skin.String(Widget.Trans))">Skin.SetString(Widget.Trans,90)</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),90)">Skin.SetString(Widget.Trans,80)</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),80)">Skin.SetString(Widget.Trans,70)</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),70)">Skin.SetString(Widget.Trans,60)</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),60)">Skin.SetString(Widget.Trans,50)</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),50)">Skin.SetString(Widget.Trans,40)</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),40)">Skin.SetString(Widget.Trans,30)</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),30)">Skin.SetString(Widget.Trans,20)</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),20)">Skin.SetString(Widget.Trans,10)</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),10)">Skin.Reset(Widget.Trans)</value>
	</variable>
	
	<!-- Widget Transparency Label -->
	<variable name="WidgetTransLabelVar">
		<value condition="!IsEmpty(Skin.String(Widget.Trans))">$INFO[Skin.String(Widget.Trans)]</value>
		<value>100</value>
	</variable>
	
	<!-- Widget Item Title -->
	<variable name="HomeWidgetTitleVar">
		<value condition="Container(11000).ListItem.Type(episode) + Skin.HasSetting(Widget.RecentlyAdded.TV.Fanart) + !IsEmpty(ListItem.Season)">$INFO[ListItem.Season]x$INFO[ListItem.Episode]. $INFO[ListItem.Title][CR][COLOR themecolor]$INFO[ListItem.TVShowTitle][/COLOR]</value>
		<value condition="Container(11000).ListItem.Type(episode) + Skin.HasSetting(Widget.RecentlyAdded.TV.Fanart) + IsEmpty(ListItem.Season)">S$INFO[ListItem.Episode]. $INFO[ListItem.Title][CR][COLOR themecolor]$INFO[ListItem.TVShowTitle][/COLOR]</value>
		<value condition="Container(11000).ListItem.Type(episode) + !Skin.HasSetting(Widget.RecentlyAdded.TV.Fanart) + !IsEmpty(ListItem.Season)">$INFO[ListItem.Season]x$INFO[ListItem.Episode]. $INFO[ListItem.Title]</value>
		<value condition="Container(11000).ListItem.Type(episode) + !Skin.HasSetting(Widget.RecentlyAdded.TV.Fanart) + IsEmpty(ListItem.Season)">S$INFO[ListItem.Episode]. $INFO[ListItem.Title]</value>
		<value condition="!IsEmpty(Skin.String(Widget.RecentlyAdded.Music.Artwork)) + Container(11000).ListItem.Type(album)">$INFO[ListItem.Label][CR][COLOR themecolor]$INFO[ListItem.Artist][/COLOR]</value>
		<value>$INFO[ListItem.Label]</value>
	</variable>
	
