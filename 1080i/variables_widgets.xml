<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<!-- Widget Background -->
	<variable name="HomeWidgetBackgroundVar">
		<value condition="StringCompare(Skin.String(Widget.Back),Flat)">homewidgets/bg_flat.png</value>
		<value condition="StringCompare(Skin.String(Widget.Back),Clear)">homewidgets/bg_clear.png</value>
		<value condition="StringCompare(Skin.String(Widget.Back),Clear White)">homewidgets/bg_clearwhite.png</value>
		<value>homewidgets/bg_default.png</value>
	</variable>

	<!-- Widget Background Setting Label -->
	<variable name="WidgetBackLabelVar">
		<value condition="IsEmpty(Skin.String(Widget.Back))">$LOCALIZE[31390]</value>
		<value condition="StringCompare(Skin.String(Widget.Back),Flat)">$LOCALIZE[42191]</value>
		<value condition="StringCompare(Skin.String(Widget.Back),Clear)">$LOCALIZE[42125]</value>
		<value condition="StringCompare(Skin.String(Widget.Back),Clear White)">$LOCALIZE[42192]</value>
	</variable>
	
	<!-- Widget Background Setting -->
	<variable name="WidgetBackVar">
		<value condition="IsEmpty(Skin.String(Widget.Back))">Skin.SetString(Widget.Back,Flat)</value>
		<value condition="StringCompare(Skin.String(Widget.Back),Flat)">Skin.SetString(Widget.Back,Clear)</value>
		<value condition="StringCompare(Skin.String(Widget.Back),Clear)">Skin.SetString(Widget.Back,Clear White)</value>
		<value condition="StringCompare(Skin.String(Widget.Back),Clear White)">Skin.Reset(Widget.Back)</value>
	</variable>
	
	<!-- Widget Poster Image -->
	<variable name="HomeWidgetPosterVar">
		<value condition="!IsEmpty(ListItem.Art(poster))">$INFO[ListItem.Art(poster)]</value>
		<value condition="!IsEmpty(ListItem.Art(tvshow.poster))">$INFO[ListItem.Art(tvshow.poster)]</value>
		<value condition="!IsEmpty(ListItem.Icon)">$INFO[ListItem.Icon]</value>
		<value>$INFO[ListItem.Art(thumb)]</value>
	</variable>
	
	<!-- Widget Transparency -->
	<variable name="HomeWidgetTransVar">
		<value condition="StringCompare(Skin.String(Widget.Trans),90)">EEFFFFFF</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),80)">DDFFFFFF</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),70)">CCFFFFFF</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),60)">BBFFFFFF</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),50)">AAFFFFFF</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),40)">99FFFFFF</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),30)">88FFFFFF</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),20)">77FFFFFF</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),10)">66FFFFFF</value>
		<value>FFFFFFFF</value>
	</variable>	
	
	<!-- Widget Transparency Setting -->
	<variable name="WidgetTransVar">
		<value condition="IsEmpty(Skin.String(Widget.Trans))">Skin.SetString(Widget.Trans,90)</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),90)">Skin.SetString(Widget.Trans,80)</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),80)">Skin.SetString(Widget.Trans,70)</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),70)">Skin.SetString(Widget.Trans,60)</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),60)">Skin.SetString(Widget.Trans,50)</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),50)">Skin.SetString(Widget.Trans,40)</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),40)">Skin.SetString(Widget.Trans,30)</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),30)">Skin.SetString(Widget.Trans,20)</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),20)">Skin.SetString(Widget.Trans,10)</value>
		<value condition="StringCompare(Skin.String(Widget.Trans),10)">Skin.Reset(Widget.Trans)</value>
	</variable>
	
	<!-- Widget Transparency Label -->
	<variable name="WidgetTransLabelVar">
		<value condition="!IsEmpty(Skin.String(Widget.Trans))">$INFO[Skin.String(Widget.Trans)]</value>
		<value>100</value>
	</variable>
	
	<!-- Widget Item Title -->
	<variable name="HomeWidgetTitleVar">
		<value>$INFO[ListItem.Label]</value>
	</variable>
	
	<!-- Recently Added Movies Case Type -->
	<variable name="RecentlyAddedMovieCaseTypeSettingVar">
		<value condition="IsEmpty(Skin.String(Widget.RecentlyAdded.Movies.Case))">Skin.SetString(Widget.RecentlyAdded.Movies.Case,Clear)</value>
        <value condition="StringCompare(Skin.String(Widget.RecentlyAdded.Movies.Case),Clear)">Skin.SetString(Widget.RecentlyAdded.Movies.Case,Glass)</value>
        <value condition="StringCompare(Skin.String(Widget.RecentlyAdded.Movies.Case),Glass)">Skin.SetString(Widget.RecentlyAdded.Movies.Case,DVD/Bluray)</value>
		<value condition="StringCompare(Skin.String(Widget.RecentlyAdded.Movies.Case),DVD/Bluray)">Skin.Reset(Widget.RecentlyAdded.Movies.Case)</value>
    </variable>
		
	<!-- Label for Recently Added Movies Case Type -->
	<variable name="RecentlyAddedMovieCaseTypeLabelVar">
		<value condition="IsEmpty(Skin.String(Widget.RecentlyAdded.Movies.Case))">$LOCALIZE[42199]</value> <!-- STRING: None -->
		<value condition="StringCompare(Skin.String(Widget.RecentlyAdded.Movies.Case),Clear)">$LOCALIZE[42125]</value>
		<value condition="StringCompare(Skin.String(Widget.RecentlyAdded.Movies.Case),Glass)">$LOCALIZE[42056]</value>
		<value condition="StringCompare(Skin.String(Widget.RecentlyAdded.Movies.Case),DVD/Bluray)">$LOCALIZE[42057]</value>
    </variable>
	
	<!-- Recently Added TV Case Type -->
	<variable name="RecentlyAddedTVCaseTypeSettingVar">
		<value condition="IsEmpty(Skin.String(Widget.RecentlyAdded.TV.Case))">Skin.SetString(Widget.RecentlyAdded.TV.Case,Clear)</value>
        <value condition="StringCompare(Skin.String(Widget.RecentlyAdded.TV.Case),Clear)">Skin.SetString(Widget.RecentlyAdded.TV.Case,Glass)</value>
        <value condition="StringCompare(Skin.String(Widget.RecentlyAdded.TV.Case),Glass)">Skin.SetString(Widget.RecentlyAdded.TV.Case,DVD/Bluray)</value>
		<value condition="StringCompare(Skin.String(Widget.RecentlyAdded.TV.Case),DVD/Bluray)">Skin.Reset(Widget.RecentlyAdded.TV.Case)</value>
    </variable>
		
	<!-- Label for Recently Added TV Case Type -->
	<variable name="RecentlyAddedTVCaseTypeLabelVar">
		<value condition="IsEmpty(Skin.String(Widget.RecentlyAdded.TV.Case))">$LOCALIZE[42199]</value> <!-- STRING: None -->
		<value condition="StringCompare(Skin.String(Widget.RecentlyAdded.TV.Case),Clear)">$LOCALIZE[42125]</value>
		<value condition="StringCompare(Skin.String(Widget.RecentlyAdded.TV.Case),Glass)">$LOCALIZE[42056]</value>
		<value condition="StringCompare(Skin.String(Widget.RecentlyAdded.TV.Case),DVD/Bluray)">$LOCALIZE[42057]</value>
    </variable>
	
	<!-- Label for Recently Added Movies Artwork Type -->
	<variable name="RecentlyAddedMovieArtworkTypeLabelVar">
		<value condition="Skin.HasSetting(Widget.RecentlyAdded.Movies.Fanart)">$LOCALIZE[31118]</value> <!-- STRING: Fanart -->
		<value>$LOCALIZE[42058]</value> <!-- STRING: Poster -->
    </variable>
	
	<!-- Label for Recently Added Movies Fanart Case Type -->
	<variable name="RecentlyAddedMovieFanartCaseTypeLabelVar">
		<value condition="Skin.HasSetting(Widget.RecentlyAdded.Movies.Fanart.Glass)">$LOCALIZE[42056]</value> <!-- STRING: Glass -->
		<value>$LOCALIZE[42199]</value> <!-- STRING: None -->
    </variable>
	
	<!-- Label for Recently Added Episodes Artwork Type -->
	<variable name="RecentlyAddedTVArtworkTypeLabelVar">
		<value condition="Skin.HasSetting(Widget.RecentlyAdded.TV.Fanart)">$LOCALIZE[42205]</value> <!-- STRING: Fanart -->
		<value>$LOCALIZE[42058]</value> <!-- STRING: Poster -->
    </variable>
	
	<!-- Label for Recently Added Episodes Fanart Case Type -->
	<variable name="RecentlyAddedTVFanartCaseTypeLabelVar">
		<value condition="Skin.HasSetting(Widget.RecentlyAdded.TV.Fanart.Glass)">$LOCALIZE[42056]</value> <!-- STRING: Glass -->
		<value>$LOCALIZE[42199]</value> <!-- STRING: None -->
    </variable>
	
</includes>