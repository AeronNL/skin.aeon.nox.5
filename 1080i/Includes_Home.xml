			<control type="label">
				<posx>250</posx>
				<posy>0</posy>
				<width>500</width>
				<height>90</height>
				<font>font_MainMenu</font>
				<textcolor>grey3</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[ListItem.Label]</label>
			</control>
		</itemlayout>
		<focusedlayout height="100" width="500" condition="![Skin.HasSetting(biggergap) | Skin.HasSetting(mainmenuicons)]">
			<control type="label">
				<posx>250</posx>
				<posy>0</posy>
				<width>500</width>
				<height>90</height>
				<font>font_MainMenu</font>
				<textcolor>grey3</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[ListItem.Label]</label>
			</control>
			<control type="label">
				<posx>250</posx>
				<posy>0</posy>
				<width>500</width>
				<height>90</height>
				<font>font_MainMenu</font>
				<textcolor>white</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[ListItem.Label]</label>
				<visible>Control.HasFocus(300)</visible>
				<include>VisibleFadeEffect</include>
			</control>
		</focusedlayout>
		<itemlayout height="100" width="640" condition="Skin.HasSetting(biggergap)">
			<control type="label">
				<posx>320</posx>
				<posy>0</posy>
				<width>640</width>
				<height>90</height>
				<font>font_MainMenu</font>
				<textcolor>grey3</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[ListItem.Label]</label>
			</control>
		</itemlayout>
		<focusedlayout height="100" width="640" condition="Skin.HasSetting(biggergap)">
			<control type="label">
				<posx>320</posx>
				<posy>0</posy>
				<width>640</width>
				<height>90</height>
				<font>font_MainMenu</font>
				<textcolor>grey3</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[ListItem.Label]</label>
			</control>
			<control type="label">
				<posx>320</posx>
				<posy>0</posy>
				<width>640</width>
				<height>90</height>
				<font>font_MainMenu</font>
				<textcolor>white</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[ListItem.Label]</label>
				<visible>Control.HasFocus(300)</visible>
				<include>VisibleFadeEffect</include>
			</control>
		</focusedlayout>
		<include>FallbackMenu</include>
	</include>
	<include name="MainMenuListFixed">
		<control type="fixedlist" id="300">
			<include>MainMenuListContent</include>
		</control>
	</include>
	<include name="MainMenuListWrapped">
		<control type="wraplist" id="300">
			<include>MainMenuListContent</include>
		</control>
	</include>

	<include name="FocusPosition4">
		<focusposition>4</focusposition>
	</include>
	<include name="FocusPosition2">
		<focusposition>2</focusposition>
	</include>

