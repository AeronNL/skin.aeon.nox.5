<includes>
	<!-- Main Menu Includes -->
	<include name="MainMenuListContent">
		<posx>-290</posx>
		<posy>62</posy>
		<width>2800</width>
		<height>100</height>
		<onleft>300</onleft>
		<onright>300</onright>
		<onup condition="Control.IsVisible(9003) + !System.HasMediaDVD">9003</onup>
		<onup condition="System.HasMediaDVD">9020</onup>
		<ondown>9001</ondown>
		<pagecontrol>-</pagecontrol>
		<scrolltime tween="quadratic" easing="out">300</scrolltime>
		<include condition="Skin.HasSetting(mainmenuicons)">FocusPosition4</include>
		<include condition="!Skin.HasSetting(mainmenuicons)">FocusPosition2</include>
