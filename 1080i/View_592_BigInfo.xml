<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <!-- Details -->
    <include name="BigInfo">
        <control type="group">
            <visible>Container.Content(movies) | Container.Content(tvshows)</visible>
            <control type="image">
                <posx>30</posx>
                <posy>20</posy>
                <width>234</width>
                <height>350</height>
                <aspectratio>stretch</aspectratio>
                <texture background="true">$VAR[PosterThumbVar]</texture>
            </control>
            <control type="label">
                <posy>15</posy>
                <posx>290</posx>
                <width>1200</width>
                <height>70</height>
                <font>font35_title</font>
                <textcolor>grey</textcolor>
                <align>left</align>
                <aligny>top</aligny>
                <label>$INFO[ListItem.Label]</label>
                <scroll>true</scroll>
            </control>
			
			<control type="label">
                <posy>82</posy>
                <posx>290</posx>
                <width>1200</width>
                <height>65</height>
                <font>font28_title</font>
                <textcolor>grey</textcolor>
                <label>$VAR[FloorSubLabelVar]</label>
				<visible>!Container.Content(movies)</visible>
            </control>
			
			<!-- No Rating -->
            <control type="label">
                <posy>82</posy>
                <posx>290</posx>
                <width>1200</width>
                <height>65</height>
                <font>font28_title</font>
                <textcolor>grey</textcolor>
                <label>$INFO[ListItem.Year,, • ]$VAR[DurationHrMinVar]</label>
				<visible>Container.Content(movies) + !IsEmpty(ListItem.Title) + IsEmpty(ListItem.RatingAndVotes)</visible>
            </control>
			
			<!-- User Rating -->
			<control type="label">
                <posy>82</posy>
                <posx>290</posx>
                <width>1200</width>
                <height>65</height>
                <font>font28_title</font>
                <textcolor>grey</textcolor>
                <label>$INFO[ListItem.Year,, • ][COLOR themecolor]$VAR[RatingVar][/COLOR] • $VAR[DurationHrMinVar]</label>
				<visible>Container.Content(movies) + !IsEmpty(ListItem.Title) + !IsEmpty(ListItem.Property(hasUserRating))</visible>
            </control>
			
			<!-- Standard Rating -->
			<control type="label">
                <posy>82</posy>
                <posx>290</posx>
                <width>1200</width>
                <height>65</height>
                <font>font28_title</font>
                <textcolor>grey</textcolor>
                <label>$INFO[ListItem.Year,, • ]$VAR[RatingVar] • $VAR[DurationHrMinVar]</label>
				<visible>Container.Content(movies) + !IsEmpty(ListItem.Title) + IsEmpty(ListItem.Property(hasUserRating)) + IsEmpty(ListItem.Property(ratingImage))</visible>
            </control>
			
			<!-- Rotten Tomatoes Rating -->
			<control type="label">
                <posy>82</posy>
                <posx>290</posx>
                <width>1200</width>
                <height>65</height>
                <font>font28_title</font>
                <textcolor>grey</textcolor>
                <label>$INFO[ListItem.Year,, • ]$INFO[ListItem.Property(ratingPercent),,% • ]$VAR[DurationHrMinVar]</label>
				<visible>Container.Content(movies) + !IsEmpty(ListItem.Title) + IsEmpty(ListItem.Property(hasUserRating)) + !IsEmpty(ListItem.Property(ratingImage))</visible>
            </control>
			
            <control type="textbox">
                <posy>150</posy>
                <posx>290</posx>
                <width>1600</width>
                <height>210</height>
                <font>font14_textbox</font>
                <textcolor>grey</textcolor>
                <align>left</align>
                <aligny>top</aligny>
                <autoscroll time="3000" delay="6000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
                <include>ShowCaseInfoPanelButtonsValues</include>
                <label>$VAR[VideoPlotVar2]</label>
            </control>
        </control>
        <control type="group">
            <visible>Container.Content(artists)</visible>
            <control type="image">
                <posx>30</posx>
                <posy>30</posy>
                <width>340</width>
                <height>340</height>
                <aspectratio aligny="center" align="center">scale</aspectratio>
                <texture background="true">$INFO[ListItem.Thumb]</texture>
            </control>
            <control type="label">
                <posy>15</posy>
                <posx>403</posx>
                <width>1200</width>
                <height>70</height>
                <font>font35_title</font>
                <textcolor>grey</textcolor>
                <align>left</align>
                <aligny>top</aligny>
                <label>$INFO[ListItem.Label]</label>
                <scroll>true</scroll>
            </control>
            <control type="label">
                <posy>82</posy>
                <posx>403</posx>
                <width>1200</width>
                <height>65</height>
                <font>font28_title</font>
                <textcolor>grey</textcolor>
                <label>[COLOR themecolor]$INFO[ListItem.Genre][/COLOR]</label>
            </control>
            <control type="textbox">
                <posy>150</posy>
                <posx>403</posx>
                <width>1487</width>
                <height>220</height>
                <font>font14_textbox</font>
                <textcolor>grey</textcolor>
                <align>left</align>
                <aligny>top</aligny>
                <autoscroll time="3000" delay="6000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
                <include>ShowCaseInfoPanelButtonsValues</include>
                <label>$INFO[ListItem.Property(summary)]</label>
				<visible>!Skin.HasSetting(General.SmallPlotText)</visible>
            </control>
			<control type="textbox">
                <posy>150</posy>
                <posx>403</posx>
                <width>1487</width>
                <height>220</height>
                <font>font14_textbox_biginfo</font>
                <textcolor>grey</textcolor>
                <align>left</align>
                <aligny>top</aligny>
                <autoscroll time="3000" delay="6000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
                <include>ShowCaseInfoPanelButtonsValues</include>
                <label>$INFO[ListItem.Property(summary)]</label>
				<visible>Skin.HasSetting(General.SmallPlotText)</visible>
            </control>
        </control>
    </include>
    <include name="View_592_BigInfo">
        <control type="group">
            <visible>Control.IsVisible(592) + !Window.IsActive(addoninformation)</visible>
            <control type="fixedlist" id="592">
                <posx>0</posx>
                <posy>665</posy>
                <width>1920</width>
                <height>400</height>
                <onleft>592</onleft>
                <onright>592</onright>
                <onup>SetProperty(MediaMenu,True,home)</onup>
                <onup>SetFocus(9050)</onup>
                <preloaditems>2</preloaditems>
                <focusposition>0</focusposition>
                <viewtype label="BigInfo">list</viewtype>
                <scrolltime tween="quadratic" easing="out">300</scrolltime>
                <visible>Container.Content(tvshows) | Container.Content(movies) | Container.Content(artists)</visible>
                <orientation>horizontal</orientation>
                <itemlayout width="1920" height="400">
                    <include>BigInfo</include>
                </itemlayout>
                <focusedlayout width="1920" height="400">
                    <include>BigInfo</include>
                </focusedlayout>
            </control>
        </control>
    </include>
</includes>
