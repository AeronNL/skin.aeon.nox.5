<?xml version="1.0" encoding="UTF-8"?>
<window id="2006">
    <defaultcontrol>-</defaultcontrol>
    <allowoverlay>false</allowoverlay>
	<zorder>1</zorder>
    <controls>
		<control type="visualisation" id="2">
			<!-- FIX ME Music Visualization needs to have an id of 2 in this window to be able to lock or change preset -->
			<description>visualisation</description>
			<include>FullscreenDimensions</include>
			<visible>[Player.HasAudio + ![StringCompare(Visualisation.Name,waveform) | StringCompare(Visualisation.Name,opengl spectrum) | StringCompare(Visualisation.Name,directx spectrum) | StringCompare(Visualisation.Name,Milkdrop)]]</visible>
		</control>
    
        <include>NowPlaying_Background</include>
		
		<control type="visualisation" id="2">
			<!-- FIX ME Music Visualization needs to have an id of 2 in this window to be able to lock or change preset -->
			<description>visualisation</description>
			<visible>[Player.HasAudio + [StringCompare(Visualisation.Name,waveform) | StringCompare(Visualisation.Name,opengl spectrum) | StringCompare(Visualisation.Name,directx spectrum) | StringCompare(Visualisation.Name,Milkdrop)]]</visible>
			<include>FullscreenDimensions</include>
		</control>
		
		<!-- Big Scrolling Text -->
		<include>Music_LargeScrollingInfo</include>
		
		<control type="group">
			<posy>520</posy>
			<visible>[Player.ShowInfo] + ![Window.IsVisible(AddonSettings) | Window.IsVisible(SelectDialog) | Window.IsVisible(VisualisationPresetList) | Window.IsActive(MusicOSD)]</visible>
			<include>VisibleFadeEffect</include>
			<include>Window_OpenClose_Animation</include>
			<control type="image">
				<posy>-200</posy>
				<width>1920</width>
				<height>760</height>
				<texture border="1">nowplaying_shadow.png</texture>
			</control>
			<control type="image">
				<posx>860</posx>
				<posy>230</posy>
				<width>400</width>
				<height>45</height>
				<colordiffuse>selected</colordiffuse>
				<aspectratio>keep</aspectratio>
				<texture fallback="rating0.png">musicrating/$INFO[Player.StarRating]</texture>
			</control>
			<control type="grouplist">
				<posx>-10</posx>
				<posy>20</posy>
				<width>1180</width>
				<height>500</height>
				<itemgap>30</itemgap>
				<control type="label">
					<height>120</height>
					<label>-</label>
				</control>
				<control type="label">
					<posx>1140</posx>
					<width>1180</width>
					<height>40</height>
					<font>font48_title</font>
					<textoffsetx>15</textoffsetx>
					<align>right</align>
					<textcolor>white2</textcolor>
					<shadowcolor>black</shadowcolor>
					<label>$INFO[MusicPlayer.TrackNumber,[COLOR labelheader],. [/COLOR]]$INFO[Player.Title]</label>
				</control>
				<control type="label">
					<height>22</height>
					<label>-</label>
				</control>
				<control type="label">
					<posx>1140</posx>
					<width>1180</width>
					<height>40</height>
					<font>font16</font>
					<textoffsetx>15</textoffsetx>
					<align>right</align>
					<textcolor>white2</textcolor>
					<shadowcolor>black</shadowcolor>
					<label>$INFO[MusicPlayer.Album]</label>
				</control>
				<control type="label">
					<posx>1140</posx>
					<width>1180</width>
					<height>40</height>
					<font>font16</font>
					<textoffsetx>15</textoffsetx>
					<align>right</align>
					<textcolor>white2</textcolor>
					<shadowcolor>black</shadowcolor>
					<label>$INFO[MusicPlayer.offset(1).TrackNumber,[COLOR=labelheader]$LOCALIZE[19031]:[/COLOR] ,. ]$INFO[MusicPlayer.offset(1).Artist,, - ]$INFO[MusicPlayer.offset(1).Title]</label>
				</control>
				<control type="label">
					<height>1</height>
					<label>-</label>
				</control>
			</control>
			
			<!-- Time -->
			<control type="label">
				<description>Time Label</description>
				<posx>1160</posx>
				<posy>460</posy>
				<height>50</height>
				<width>1180</width>
				<align>right</align>
				<label>[COLOR=white]$INFO[MusicPlayer.Time][/COLOR] / [COLOR=white]$INFO[MusicPlayer.Duration][/COLOR]</label>
				<font>font48</font>
				<textcolor>themecolor</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="label">
				<posx>0</posx>
				<posy>40</posy>
				<width>1180</width>
				<height>80</height>
				<font>font_musicviz</font>
				<align>right</align>
				<textoffsetx>15</textoffsetx>
				<textcolor>white2</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$INFO[MusicPlayer.Artist]</label>
			</control>
			<control type="group">
				<posx>1170</posx>
				<posy>-12</posy>
				<control type="image" id="8888">
					<posx>220</posx>
					<posy>3</posy>
					<width>545</width>
					<height>545</height>
					<aligny>top</aligny>
					<aspectratio align="left">keep</aspectratio>
					<fadetime>300</fadetime>
					<animation effect="rotate" end="-360" center="auto" time="5000" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
					<texture background="true" fallback="special://skin/extras/cdart/blank.png" diffuse="thumbs/cdart_mask.png">$VAR[VirtualCDArtVar]</texture>
					<bordersize>30</bordersize>
				</control>
				<control type="label">
					<posx>360</posx>
					<posy>80</posy>
					<width>265</width>
					<height>89</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>fontCDartist</font>
					<label>$INFO[MusicPlayer.Artist, ,]</label>
					<animation effect="rotate" end="-360" center="495,275" time="5000" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
					<textcolor>black</textcolor>
					<wrapmultiline>true</wrapmultiline>
				</control>
				<control type="label">
					<posx>350</posx>
					<posy>370</posy>
					<width>280</width>
					<height>99</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>fontCDalbum</font>
					<label>$INFO[MusicPlayer.Album, ,]</label>
					<animation effect="rotate" end="-360" center="495,275" time="5000" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
					<textcolor>black</textcolor>
					<wrapmultiline>true</wrapmultiline>
				</control>
				<control type="image">
					<description>Cover image</description>
					<width>550</width>
					<height>550</height>
					<aspectratio align="right">scale</aspectratio>
					<texture diffuse="thumbs/cdcover_mask2.png" fallback="DefaultAlbumCover.png">$INFO[Player.Art(thumb)]</texture>
					<bordertexture border="28">thumbs/cd_shadow2.png</bordertexture>
					<bordersize>28</bordersize>
				</control>
			</control>
		</control>
    </controls>
</window>
