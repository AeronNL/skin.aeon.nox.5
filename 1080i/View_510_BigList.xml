	<include name="BigList_Landscape">
		<control type="group">
			<posx>12</posx>
			<posy>11</posy>
            <control type="group">
                <visible>!Container.Content(episodes)</visible>
                <control type="image">
                    <width>346</width>
                    <height>195</height>
                    <texture background="true">$INFO[ListItem.Art(landscape)]</texture>
                    <aspectratio>scale</aspectratio>
                    <bordertexture border="2">thumbs/panel_border3.png</bordertexture>
					<bordersize>2</bordersize>
                    <visible>!IsEmpty(ListItem.Art(landscape))</visible>
                </control>
                <control type="image">
                    <width>346</width>
                    <height>195</height>
                    <texture background="true">$INFO[ListItem.Art(fanart)]</texture>
                    <aspectratio>scale</aspectratio>
                    <bordertexture border="2">thumbs/panel_border3.png</bordertexture>
					<bordersize>2</bordersize>
                    <visible>IsEmpty(ListItem.Art(landscape))</visible>
                </control>
                <control type="image">
                    <posy>90</posy>
                    <width>346</width>
                    <height>98</height>
                    <aspectratio align="center" aligny="bottom">keep</aspectratio>
                    <texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
                    <visible>IsEmpty(ListItem.Art(landscape)) + !IsEmpty(ListItem.Art(clearlogo))</visible>
                </control>
            </control>
            <control type="image">
				<width>346</width>
				<height>195</height>
				<texture background="true">$INFO[ListItem.thumb]</texture>
				<aspectratio>scale</aspectratio>
                <bordertexture border="2">thumbs/panel_border3.png</bordertexture>
                <bordersize>2</bordersize>
				<visible>Container.Content(episodes)</visible>
			</control>
            <control type="image">
				<posx>286</posx>
                <posy>2</posy>
				<width>60</width>
				<height>60</height>
				<texture>$VAR[OverlayVar]</texture>
				<aspectratio align="right" aligny="top">keep</aspectratio>
			</control>
		</control>
