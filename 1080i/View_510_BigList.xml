                            <posy>10</posy>
                            <control type="group">
							
								<!-- Title -->
                                <control type="label">
                                    <width>1330</width>
                                    <height>50</height>
                                    <label>$INFO[ListItem.Label]</label>
                                    <font>font16_title_bold</font>
