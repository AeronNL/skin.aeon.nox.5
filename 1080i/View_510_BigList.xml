                        <include>BigList_Landscape</include>
                        <control type="group">
                            <posx>375</posx>
                            <posy>10</posy>   

							<!-- Title -->
                            <control type="label">
                                <width>1330</width>
                                <height>50</height>
                                <label>$INFO[ListItem.Label]</label>
                                <font>font16_title_bold</font>
                                <textcolor>grey</textcolor>
                            </control>
							
							<!-- Genre -->
