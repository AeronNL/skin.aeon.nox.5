                    <posx>0</posx>
                    <posy>151</posy>
                    <width>1725</width>
                    <height>868</height>
                    <onleft>SetProperty(MediaMenu,True,home)</onleft>
                    <onleft>SetFocus(9050)</onleft>
                    <onright>60</onright>
