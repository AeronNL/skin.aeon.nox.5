                                    <posy>45</posy>
                                    <width>980</width>
                                    <height>50</height>
                                    <label>$INFO[ListItem.Genre]</label>
                                    <aligny>center</aligny>
                                    <font>font14</font>
                                    <textcolor>grey</textcolor>
                                </control>
								
								<!-- Year, Rating and Runtime -->
                                <control type="label">
                                    <posy>45</posy>
                                    <width>1330</width>
									<posx>1330</posx>
                                    <height>50</height>
                                    <label>$INFO[ListItem.Year] [COLOR labelheader]|[/COLOR] $INFO[ListItem.Rating] [COLOR labelheader]|[/COLOR] $INFO[ListItem.Duration] Minutes</label>
                                    <align>right</align>
                                    <aligny>center</aligny>
                                    <font>font14</font>
                                    <textcolor>grey</textcolor>
									<visible>!IsEmpty(ListItem.Year) + !IsEmpty(ListItem.Rating)</visible>
                                </control>
								
								<!-- Year and Runtime -->
                                <control type="label">
                                    <posy>45</posy>
                                    <width>1330</width>
									<posx>1330</posx>
                                    <height>50</height>
                                    <label>$INFO[ListItem.Year] [COLOR labelheader]|[/COLOR] $INFO[ListItem.Duration] Minutes</label>
                                    <align>right</align>
                                    <aligny>center</aligny>
                                    <font>font14</font>
                                    <textcolor>grey</textcolor>
									<visible>!IsEmpty(ListItem.Year) + IsEmpty(ListItem.Rating)</visible>
                                </control>
								
								<!-- Rating and Runtime -->
                                <control type="label">
                                    <posy>45</posy>
                                    <width>1330</width>
									<posx>1330</posx>
                                    <height>50</height>
                                    <label>$INFO[ListItem.Rating] [COLOR labelheader]|[/COLOR] $INFO[ListItem.Duration] Minutes</label>
                                    <align>right</align>
                                    <aligny>center</aligny>
                                    <font>font14</font>
                                    <textcolor>grey</textcolor>
									<visible>IsEmpty(ListItem.Year) + !IsEmpty(ListItem.Rating)</visible>
                                </control>
								
								<!-- Runtime -->
                                <control type="label">
                                    <posy>45</posy>
                                    <width>1330</width>
									<posx>1330</posx>
                                    <height>50</height>
                                    <label>$INFO[ListItem.Duration] Minutes</label>
                                    <align>right</align>
                                    <aligny>center</aligny>
                                    <font>font14</font>
                                    <textcolor>grey</textcolor>
									<visible>IsEmpty(ListItem.Year) + IsEmpty(ListItem.Rating)</visible>
                                </control>
								
								<!-- Plot Summary -->
                                <control type="textbox">
                                    <posy>95</posy>
                                    <width>1330</width>
                                    <height>108</height>
                                    <label>$VAR[VideoPlotVar]</label>
                                    <font>font14_textbox</font>
                                    <autoscroll time="3500" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
                                </control>
                            </control>
                        </control>
                    </focusedlayout>
                </control>
                <control type="scrollbar" id="60">
                    <posx>1725</posx>
                    <posy>151</posy>
                    <width>12</width>
                    <height>868</height>
                    <onup>60</onup>
                    <ondown>60</ondown>
                    <onleft>510</onleft>
                    <onright>SetProperty(MediaMenu,True,home)</onright>
                    <onright>SetFocus(9050)</onright>
                    <texturesliderbackground>-</texturesliderbackground>
                    <texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
                    <texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
                    <showonepage>false</showonepage>
                    <orientation>vertical</orientation>
                    <animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
                </control>
            </control>
        </control>
	</include>
 
