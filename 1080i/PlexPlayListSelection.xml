<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">50</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <onload>SetProperty(Window.HasSettings,True,home)</onload>
    <onload>ClearProperty(MediaMenu,Home)</onload>
    <onload>Skin.SetString(SectionType,photos)</onload>
    <onunload>Skin.Reset(SectionType)</onunload>
    <onunload>ClearProperty(Window.HasSettings,Home)</onunload>
    <views>50,501</views>
    <controls>
        
		<!-- Background -->
		<control type="group">
            <animation effect="fade" time="600">WindowOpen</animation>
            <animation effect="fade" time="600">WindowClose</animation>
			<control type="image">
				<description>Normal Default Background Image</description>
				<include>FullscreenDimensions</include>
				<aspectratio>scale</aspectratio>
				<texture background="true">$INFO[ListItem.CompositeImage(width=1920;height=1080;cols=6;rows=2)]</texture>
			</control>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1920</width>
				<height>1080</height>
				<texture>black-back.png</texture>
			</control>
			<control type="group">
				<include>Window_OpenClose_Animation</include>
				<include>ViewAnimation</include>
				<animation effect="slide" end="0,80" time="720" tween="cubic" easing="inout" condition="![[Control.isVisible(52) + !Window.IsActive(systeminfo)] | Control.IsVisible(53) | Control.IsVisible(54) | Control.IsVisible(55)  | Control.IsVisible(56) | Control.IsVisible(500) | Control.IsVisible(57)  | Control.IsVisible(58)]">Conditional</animation>
				
				
				<control type="image">
					<posx>0</posx>
					<posy>400</posy>
					<width>1920</width>
					<height>680</height>
					<texture>floor.png</texture>
					<visible>!Control.IsVisible(504)</visible>
				</control>
			</control>
			
		</control>
		
        <control type="group">
            <include>Window_OpenClose_Animation</include>
            <include>PlaylistList</include>
            <!-- view id = 50 -->
			<include>PictureWall</include>
            <!-- view id = 501 -->
        </control>
        <include>ScrollOffsetLabel</include>
        <include>Topbar</include>
 
        <control type="group">
            <posx>-440</posx>
            <animation effect="slide" start="440,0" end="0,0" time="400" tween="quadratic" easing="out" condition="IsEmpty(Window(home).Property(MediaMenu))">Conditional</animation>
			<animation effect="slide" start="0,0" end="-440,0" time="400" tween="quadratic" easing="out">WindowClose</animation>
			<posy>0</posy>
				
			<!-- Display Side Blade Menu Background -->
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>440</width>
				<height>1080</height>
				<texture border="40">mediamenu_back.png</texture>
			</control>
			
			<!-- Display Aeon Nox Logo -->
			<control type="image">
				<description>LOGO</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>400</width>
				<height>120</height>
				<aspectratio>keep</aspectratio>
				<texture>aeon-nox-logo.png</texture>
			</control>
			
			<!-- Icon Menu -->
			<control type="group" id="9050">
				<posy>100</posy>
				<posx>350</posx>
				<width>35</width>
				<orientation>vertical</orientation>
				<itemgap>0</itemgap>
						
				<!-- Close Sideblade -->
				<control type="button" id="104">
					<posy>60</posy>
					<width>60</width>
					<height>35</height>
					<textoffsetx>15</textoffsetx>
					<textcolor>grey</textcolor>
					<focusedcolor>blue</focusedcolor>
					<texturefocus border="0"></texturefocus>
					<texturenofocus border="0"></texturenofocus>
					<textwidth>300</textwidth>
					<aligny>center</aligny>
					<onleft>200</onleft>
					<onright>ClearProperty(MediaMenu,Home)</onright>
					<onright>50</onright>
					<onup>108</onup>
					<ondown>105</ondown>
					<onback>ClearProperty(MediaMenu,Home)</onback>
					<onback>50</onback>
					<font>IconTiny</font>
					<label></label>
					<onclick>ClearProperty(MediaMenu,Home)</onclick>
					<onclick>50</onclick>
					<onclick>Control.SetFocus(50)</onclick>
				</control>
				
				<!-- Home Button -->
				<control type="button" id="105">
					<posy>95</posy>
					<width>60</width>
					<height>35</height>
					<textoffsetx>15</textoffsetx>
					<textcolor>grey</textcolor>
					<focusedcolor>blue</focusedcolor>
					<texturefocus border="0"></texturefocus>
					<texturenofocus border="0"></texturenofocus>
					<textwidth>300</textwidth>
					<aligny>center</aligny>
					<onleft>200</onleft>
					<onright>ClearProperty(MediaMenu,Home)</onright>
					<onright>50</onright>
					<onup>104</onup>
					<ondown>108</ondown>
					<onback>ClearProperty(MediaMenu,Home)</onback>
					<onback>50</onback>
					<font>IconTiny</font>
					<label>↸</label>
					<onclick>ActivateWindow(home)</onclick>
				</control>
								
				<!-- Change Viewtype -->				
				<control type="button" id="108">
					<description>View As button</description>
					<posy>130</posy>
					<width>60</width>
					<height>35</height>
					<textoffsetx>15</textoffsetx>
					<textcolor>grey</textcolor>
					<focusedcolor>blue</focusedcolor>
					<texturefocus border="0"></texturefocus>
					<texturenofocus border="0"></texturenofocus>
					<textwidth>300</textwidth>
					<aligny>center</aligny>
					<font>IconTiny</font>
					<onleft>200</onleft>
					<onright>ClearProperty(MediaMenu,Home)</onright>
					<onright>50</onright>
					<onup>105</onup>
					<ondown>104</ondown>
					<onback>ClearProperty(MediaMenu,Home)</onback>
					<onback>50</onback>
					<onclick>Container.NextViewMode</onclick>	
					<label></label>
				</control>
				
			</control>
			
			<!-- Options Menu -->
			<control type="grouplist" id="200">
				<posx>0</posx>
				<posy>100</posy>
				<zorder>10</zorder>
				<width>350</width>
				<height>1080</height>
				<onright>9050</onright>
				<onback>9050</onback>
				<onleft>9050</onleft>
				
				<!-- View Options Title -->
				<control type="label" id="201">
					<width>350</width>
					<height>52</height>
					<textoffsetx>15</textoffsetx>
					<font>font13_title</font>
					<label>31006</label>
					<textcolor>themecolor</textcolor>
					<aligny>center</aligny>
				</control>
				
				<!-- Change View type -->
				<control type="button" id="2">
					<description>View As button</description>
					<posy>60</posy>
					<textwidth>350</textwidth>
					<width>350</width>
					<height>60</height>
					<textoffsetx>15</textoffsetx>
					<textcolor>grey</textcolor>
					<focusedcolor>white</focusedcolor>
					<textwidth>300</textwidth>
					<aligny>center</aligny>
					<font>font13</font>
					<radioposx>340</radioposx>
					<onclick>Container.NextViewMode</onclick>	
					<label>-</label>
				</control>
				
				<!-- Toggle Background -->
				<control type="button" id="203">
					<description>Toggle Background</description>
					<posy>120</posy>
					<!--<textwidth>200</textwidth>-->
					<width>350</width>
					<height>60</height>
					<textoffsetx>15</textoffsetx>
					<textcolor>grey</textcolor>
					<focusedcolor>white</focusedcolor>
					<textwidth>300</textwidth>
					<aligny>center</aligny>
					<font>font13</font>
					<radioposx>340</radioposx>
					<label>$LOCALIZE[33068]</label>
					<label2>[COLOR labelheader]$VAR[BackgroundLabelVar][/COLOR]</label2>
					<onclick>$VAR[VideoBackgroundClickVar]</onclick>
					<visible>!Container.Content(genres)</visible>
				</control>
				
			</control>
        </control>
    </controls>
</window>