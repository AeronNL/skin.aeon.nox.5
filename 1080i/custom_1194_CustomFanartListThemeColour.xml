<?xml version="1.0" encoding="UTF-8"?>
<window id="1194">
	<onload>Skin.Reset(Colour.Temp)</onload>
	<defaultcontrol always="true">3110</defaultcontrol>
	<include>dialogeffect</include>
	
	<controls>
		
		<include>Colour_Background</include>
		
		<!-- TopBar -->
        <control type="group">
            <animation effect="slide" start="0,-90" end="0,0" delay="800" time="480" condition="Window.Previous(home)">WindowOpen</animation>
            <animation effect="slide" end="0,-90" start="0,0" time="480" condition="Window.Next(home)">WindowClose</animation>
            <visible>!Control.IsVisible(609)</visible>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>66</height>
                <texture border="1">topbar.png</texture>
            </control>
            <control type="label">
                <width>900</width>
                <height>90</height>
                <font>font13_title</font>
                <textoffsetx>15</textoffsetx>
                <textcolor>grey2</textcolor>
                <align>left</align>
                <aligny>top</aligny>
                <textoffsety>-2</textoffsety>
                <label>$LOCALIZE[42265]</label>
            </control>
			<control type="label">
                <posx>1920</posx>
                <width>900</width>
                <height>90</height>
                <font>font13_title</font>
                <textoffsetx>15</textoffsetx>
                <textcolor>grey2</textcolor>
                <align>right</align>
                <aligny>top</aligny>
                <textoffsety>-2</textoffsety>
                <label>$LOCALIZE[42335] $LOCALIZE[42303]</label> <!-- STRING: FanartList view: Theme Colour -->
            </control>
            <control type="label">
                <posx>0</posx>
                <width>1920</width>
                <height>90</height>
                <font>font13_title</font>
                <textoffsetx>15</textoffsetx>
                <textcolor>grey2</textcolor>
                <align>center</align>
                <aligny>top</aligny>
                <textoffsety>-2</textoffsety>
                <label>$INFO[System.Time]</label>
            </control>
            <control type="group">
                <visible>Player.HasMedia + ![Window.IsActive(volumebar)]</visible>
                <animation effect="slide" start="0,-60" end="0,0" time="200">Visible</animation>
                <animation effect="slide" start="0,0" end="0,-60" time="200">Hidden</animation>
                <posx>1080</posx>
                <control type="progress">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>500</width>
                    <height>37</height>
                    <texturebg border="2">osd/texturebg.png</texturebg>
                    <lefttexture>-</lefttexture>
                    <midtexture border="2">osd/midtexture_cache.png</midtexture>
                    <righttexture>-</righttexture>
                    <overlaytexture>-</overlaytexture>
                    <info>Player.ProgressCache</info>
                </control>
                <control type="progress">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>500</width>
                    <height>35</height>
                    <texturebg border="1">osd/texturebg_cache.png</texturebg>
                    <lefttexture>-</lefttexture>
                    <midtexture border="2">osd/midtexture.png</midtexture>
                    <righttexture>-</righttexture>
                    <overlaytexture>-</overlaytexture>
                    <info>Player.Progress</info>
                </control>
                <control type="label">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>500</width>
                    <height>90</height>
                    <font>font13_title</font>
                    <textoffsetx>10</textoffsetx>
                    <textcolor>grey</textcolor>
                    <shadowcolor>AA000000</shadowcolor>
                    <align>left</align>
                    <aligny>top</aligny>
                    <textoffsety>-2</textoffsety>
                    <scroll>true</scroll>
                    <label>$INFO[Player.Title]</label>
                </control>
            </control>
        </control>
	
		<!-- Colour Customizer -->
		<control type="group">
			<control type="image">
				<posx>30</posx>
				<posy>60</posy>
				<width>1860</width>
				<height>980</height>
				<texture border="40">dialogs/default/bg.png</texture>
				<animation effect="fade" reversible="false" end="95" time="0" condition="true">Conditional</animation>
			</control>
			
			<include>Colour_Picker</include>

			<!-- Colour Swatch -->
			<control type="image">
				<posy>870</posy>
				<posx>61</posx>
				<width>140</width>
				<height>140</height>
				<texture border="5" diffuse="diffuse_color_picker.png">panel.png</texture>
				<colordiffuse>$VAR[ColourSwatch]</colordiffuse>
			</control>
			<control type="grouplist">
				<orientation>horizontal</orientation>
				<itemgap>10</itemgap>
				<posx>205</posx>
				<posy>945</posy>
				<width>1800</width>
				
				<!-- Colour Label -->
				<control type="label">
					<width>406</width>
					<height>60</height>
					<align>left</align>
					<textoffsetx>15</textoffsetx>
					<textcolor>grey2</textcolor>
					<label>[UPPERCASE]$INFO[Container(3110).ListItem.Label2][/UPPERCASE]</label>
				</control>
				
				<!-- Change Colour Palette -->
				<control type="button" id="3030">
					<width>406</width>
					<align>left</align>
					<onup>3110</onup>
					<ondown>noop</ondown>
					<onclick>$VAR[ColourPaletteSettingVar]</onclick>
					<label>$LOCALIZE[42280]: [COLOR $VAR[Colour_ThemeColourVar]]$VAR[ColourPaletteLabelVar][/COLOR]</label>
					<texturenofocus border="1">empty.png</texturenofocus>
				</control>
							
				<!-- Save Button -->
				<control type="button" id="3012">
					<width>406</width>
					<height>60</height>
					<onup>3110</onup>
					<ondown>noop</ondown>
					<onclick>Skin.SetString(Colour.FanartListThemeColour,$INFO[Skin.String(Colour.Temp)])</onclick>
					<onclick>Close</onclick>
					<label>$LOCALIZE[190]</label> <!-- STRING: Save -->
					<texturenofocus border="1">empty.png</texturenofocus>
				</control>
				
				<!-- Reset to Default Button -->
				<control type="button" id="3011">
					<width>406</width>
					<height>60</height>
					<onup>3110</onup>
					<ondown>noop</ondown>
					<onright>3020</onright>
					<onclick>Skin.Reset(Colour.FanartListThemeColour)</onclick>
					<onclick>Close</onclick>
					<label>Default</label>
					<texturenofocus border="1">empty.png</texturenofocus>
				</control>
				
			</control>
		</control>
	</controls>
</window>