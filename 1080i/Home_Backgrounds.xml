<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="HomeBackgrounds">

		<!-- Display Plex Fanart -->
        <control type="multiimage" id="10101">
			<include>FullscreenDimensions</include>
			<animation effect="fade" time="600">VisibleChange</animation>
            <fadetime>600</fadetime>
			<visible>!ControlGroup(9003).HasFocus() + !ControlGroup(9001).HasFocus()</visible>
        </control>
		
		<!-- Log off / Sign in -->
		<control type="image">
            <include>FullscreenDimensions</include>
			<animation effect="fade" time="600">VisibleChange</animation>
            <fadetime>600</fadetime>
            <visible>ControlGroup(9001).HasFocus() + [stringcompare(Container(9010).ListItem.Label,Log Off) | stringcompare(Container(9010).ListItem.Label,Sign In)]</visible>
            <texture background="true">special://skin/backgrounds/profile.jpg</texture>	
        </control>
		
		<!-- Channel Directory -->
		<control type="image">
            <include>FullscreenDimensions</include>
			<animation effect="fade" time="600">VisibleChange</animation>
            <fadetime>600</fadetime>
            <visible>ControlGroup(9001).HasFocus() + stringcompare(Container(9010).ListItem.Label,Channel Directory)</visible>
            <texture background="true">special://skin/backgrounds/channels.jpg</texture>	
        </control>
		
		<!-- Preferences -->
		<control type="image">
            <include>FullscreenDimensions</include>
			<animation effect="fade" time="600">VisibleChange</animation>
            <fadetime>600</fadetime>
            <visible>ControlGroup(9001).HasFocus() + stringcompare(Container(9010).ListItem.Label,Preferences)</visible>
            <texture background="true">special://skin/backgrounds/system.jpg</texture>	
        </control>
		
		<!-- Skin Settings -->
		<control type="image">
            <include>FullscreenDimensions</include>
			<animation effect="fade" time="600">VisibleChange</animation>
            <fadetime>600</fadetime>
            <visible>ControlGroup(9001).HasFocus() + stringcompare(Container(9010).ListItem.Label,Skin Settings)</visible>
            <texture background="true">special://skin/backgrounds/skinsetting.jpg</texture>	
        </control>
		
		<!-- Quit -->
		<control type="image">
            <include>FullscreenDimensions</include>
			<animation effect="fade" time="600">VisibleChange</animation>
            <fadetime>600</fadetime>
            <visible>ControlGroup(9001).HasFocus() + [stringcompare(Container(9010).ListItem.Label,Quit) | stringcompare(Container(9010).ListItem.Label,Suspend) | stringcompare(Container(9010).ListItem.Label,Power Off System)]</visible>
            <texture background="true">special://skin/backgrounds/shutdown.jpg</texture>	
        </control>
		
		<!-- Widget Recently Added Background -->
        <control type="image">
            <include>FullscreenDimensions</include>
			<animation effect="fade" time="600">VisibleChange</animation>
            <fadetime>600</fadetime>
            <visible>ControlGroup(9003).HasFocus() + !Container(11000).ListItem.Type(Photo)</visible>
            <texture background="true">$INFO[Container(11000).ListItem.Art(fanart)]</texture>	
        </control>
		
		<!-- Widget Playlists Background -->
        <control type="image">
            <include>FullscreenDimensions</include>
			<animation effect="fade" time="600">VisibleChange</animation>
            <fadetime>600</fadetime>
            <visible>ControlGroup(11005).HasFocus() + !IsEmpty(Container(11005).ListItem.Label)</visible>
            <texture background="true">$INFO[Container(11005).ListItem.CompositeImage(width=1920;height=1080;cols=6;rows=2)]</texture>
        </control>
		
		<!-- Widget Recently Added Background (Photo) -->
        <control type="image">
            <include>FullscreenDimensions</include>
            <visible>ControlGroup(9003).HasFocus() + Container(11000).ListItem.Type(Photo)</visible>
			<fadetime>600</fadetime>
            <texture background="true">$INFO[Container(11000).ListItem.Art(bigThumb)]</texture>
			<aspectratio>scale</aspectratio>
        </control>
		
		<!-- Widget On Deck Background -->
        <control type="image">
            <include>FullscreenDimensions</include>
			
            <fadetime>600</fadetime>
            <visible>ControlGroup(9004).HasFocus() + !Container(11001).ListItem.Type(Photo)</visible>
            <texture background="true">$INFO[Container(11001).ListItem.Art(fanart)]</texture>
        </control>
		
		<!-- Widget On Deck Background (Photo) -->
        <control type="image">
            <include>FullscreenDimensions</include>
            <visible>ControlGroup(9004).HasFocus() + Container(11001).ListItem.Type(Photo)</visible>
			<fadetime>600</fadetime>
            <texture background="true">$INFO[Container(11001).ListItem.Art(bigThumb)]</texture>
			<aspectratio>scale</aspectratio>
        </control>
		
        <!-- Visualization Background -->
        <control type="visualisation">
            <include>FullscreenDimensions</include>
            <visible>Player.HasAudio + !Skin.HasSetting(Disable.ShowBackgroundVis)</visible>
            <visible>!SubString(Window(videolibrary).Property(TvTunesIsAlive),True)</visible>
        </control>
		
        <!-- Video Background -->
        <control type="image">
            <include>FullscreenDimensions</include>
            <texture>black.png</texture>
            <visible>Player.HasVideo + !Skin.HasSetting(Disable.ShowBackgroundVideo)</visible>
        </control>
        <control type="videowindow">
            <include>FullscreenDimensions</include>
            <visible>Player.HasVideo + !Skin.HasSetting(Disable.ShowBackgroundVideo)</visible>
        </control>
		
	</include>
</includes>