<?xml version="1.0"?>

<!-- Plex Login Screen -->
<includes>

	<!-- Background -->
	<include name="UserSwitchLoginBg">
		<control type="group">
		
			<!-- Background Image -->
			<control type="image">
				<description>Normal Default Background Image</description>
				<include>FullscreenDimensions</include>
				<texture>special://skin/backgrounds/default_login.jpg</texture>
			</control>
			
			<!-- Background Image Overlay -->
			<control type="image">
				<description>Normal Default Background Image</description>
				<include>FullscreenDimensions</include>
				<texture border="1">back.png</texture>
			</control>
			
			<!-- Aeon Nox Logo -->
			<control type="image">
				<description>LOGO</description>
				<posx>1482</posx>
				<posy>940</posy>
				<width>356</width>
				<height>120</height>
				<aspectratio align="right">keep</aspectratio>
				<texture>aeon-nox-logo.png</texture>
			</control>
			
			<!-- Plex Logo -->
			<control type="image">
				<description>LOGO</description>
				<posx>130</posx>
				<posy>878</posy>
				<width>135</width>
				<aspectratio align="left">keep</aspectratio>
				<texture>plex-logo-light-small.png</texture>
			</control>
			
			<!-- Display "Select your PLEX user profile[CR]to login and continue" -->
			<control type="label">
				<posx>442</posx>
				<posy>150</posy>
				<width>1035</width>
				<height>60</height>
				<font>font15</font>
				<textcolor>grey2</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>$LOCALIZE[31421]</label>
			</control>
			
			<control type="image">
						<posy>5</posy>
						<posx>5</posx>
						<width>140</width>
						<height>140</height>
						<aspectratio scalediffuse="false" align="center">scale</aspectratio>
						<texture diffuse="round-big.png">$INFO[ListItem.Art(thumb)]</texture>
					</control>
		</control>
	</include>
		
	<!-- list -->
	<include name="UserSwitchLogin">
		<control type="group">
			<!-- list -->
			
			<defaultcontrol always="true">3</defaultcontrol>
			
            <control type="list" id="3">
                <posx>442</posx>
                <posy>255</posy>
                <width>1035</width>
                <height>602</height>
                <onleft>3</onleft>
                <onright>3</onright>
                <onup>3</onup>
                <ondown>3</ondown>
                <viewtype label="535">list</viewtype>
                <pagecontrol>-</pagecontrol>
                <scrolltime tween="quadratic" easing="out">200</scrolltime>
                <itemlayout height="150" width="1035">
                    <control type="image">
                        <posx>15</posx>
                        <posy>15</posy>
                        <width>120</width>
                        <height>112</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                    </control>
                    <control type="label">
                        <posx>165</posx>
                        <posy>15</posy>
                        <width>870</width>
                        <height>60</height>
                        <font>font24_title</font>
                        <textcolor>grey2</textcolor>
                        <selectedcolor>selected</selectedcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <!--<control type="label">
                        <posx>165</posx>
                        <posy>75</posy>
                        <width>870</width>
                        <height>38</height>
                        <font>font13</font>
                        <textcolor>grey2</textcolor>
                        <selectedcolor>selected</selectedcolor>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>-->
                </itemlayout>
                <focusedlayout height="150" width="870">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1035</width>
                        <height>142</height>
                        <texture border="5">button-nofocus.png</texture>
                        <visible>!Control.HasFocus(3)</visible>
                        <include>VisibleFadeEffect</include>
                    </control>
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1035</width>
                        <height>142</height>
                        <texture border="5">listselect_fo.png</texture>
                        <visible>Control.HasFocus(3)</visible>
                        <include>VisibleFadeEffect</include>
                    </control>
                    <control type="image">
                        <posx>15</posx>
                        <posy>15</posy>
                        <width>120</width>
                        <height>112</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                    </control>
                    <control type="label">
                        <posx>165</posx>
                        <posy>15</posy>
                        <width>870</width>
                        <height>60</height>
                        <font>font24_title</font>
                        <selectedcolor>selected</selectedcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <!--<control type="label">
                        <posx>165</posx>
                        <posy>75</posy>
                        <width>870</width>
                        <height>38</height>
                        <font>font13</font>
                        <selectedcolor>selected</selectedcolor>
                        <label>$INFO[ListItem.Label2]</label>
                    </control> -->
                </focusedlayout>
            </control>

		</control>
	</include>

</includes>
