<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<!-- Label for Hiding the Topbar in OSD Setting -->
	<variable name="OSDTopbarHideLabelVar">
		<value condition="!Skin.HasSetting(OSD.TopBarHide.Enable)">$LOCALIZE[42092]</value> <!-- STRING: Show -->
		<value>$LOCALIZE[42094]</value> <!-- STRING: Hide -->
	</variable>
	
	<!-- Label for the Delay in Hiding the Topbar in OSD Setting -->
	<variable name="OSDTopBarHideDelayLabelVar">
		<value condition="!Skin.HasSetting(OSD.TopBarHide.Enable)">$LOCALIZE[42093]</value> <!-- STRING: Disabled -->
		<value condition="IsEmpty(Skin.String(OSD.TopBarHide.Delay))">15 $LOCALIZE[31090]</value> <!-- STRING: 15 Seconds -->
		<value>$INFO[Skin.String(OSD.TopBarHide.Delay)] $LOCALIZE[31090]</value> <!-- STRING: XX Seconds -->
	</variable>
	
	<!-- Setting for the Delay in Hiding the Topbar in OSD -->
	<!-- Values range from 5 Seconds to 30 Seconds -->
	<variable name="OSDTopBarHideDelaySettingVar">
		<value condition="IsEmpty(Skin.String(OSD.TopBarHide.Delay))">Skin.SetString(OSD.TopBarHide.Delay,20)</value>
        <value condition="StringCompare(Skin.String(OSD.TopBarHide.Delay),20)">Skin.SetString(OSD.TopBarHide.Delay,25)</value>
		<value condition="StringCompare(Skin.String(OSD.TopBarHide.Delay),25)">Skin.SetString(OSD.TopBarHide.Delay,30)</value>
		<value condition="StringCompare(Skin.String(OSD.TopBarHide.Delay),30)">Skin.SetString(OSD.TopBarHide.Delay,5)</value>
		<value condition="StringCompare(Skin.String(OSD.TopBarHide.Delay),5)">Skin.SetString(OSD.TopBarHide.Delay,10)</value>
        <value condition="StringCompare(Skin.String(OSD.TopBarHide.Delay),10)">Skin.Reset(OSD.TopBarHide.Delay)</value>
    </variable>
	
	<!-- OSD Resolution Flag Style Label (Mini/Full) -->
	<variable name="OSDResolutionFlagLabelVar">
		<value condition="!Skin.HasSetting(OSD.FullResolutionFlag.Enable)">$LOCALIZE[42120]</value> <!-- STRING: Mini -->
		<value>$LOCALIZE[42121]</value> <!-- STRING: Full -->
	</variable>
	
	<variable name="OSDTitleVar">
		<value condition="VideoPlayer.Content(movies)">[B][UPPERCASE]$INFO[Player.Title][/UPPERCASE] $INFO[VideoPlayer.Year,(,)][/B]</value> <!-- Display Movie Title -->
		<value condition="VideoPlayer.Content(episodes) + !IsEmpty(VideoPlayer.Season)">[B]$INFO[VideoPlayer.Season]x$INFO[VideoPlayer.Episode]. [UPPERCASE]$INFO[Player.Title][/UPPERCASE][/B]</value> <!-- Display TV Episode Title -->
		<value condition="VideoPlayer.Content(episodes) + IsEmpty(VideoPlayer.Season)">[B]S$INFO[VideoPlayer.Episode]. [UPPERCASE]$INFO[Player.Title][/UPPERCASE][/B]</value> <!-- Display TV Special Title -->
		<value>[UPPERCASE]$INFO[Player.Title][/UPPERCASE]</value> <!-- Display Other Video Title -->
	</variable>
	
	<variable name="OSDStatus">
		<value condition="Player.Paused + !Player.Seeking + !Player.Caching">$LOCALIZE[112]</value>
		<value condition="Player.Forwarding2x | Player.Forwarding4x | Player.Forwarding8x | Player.Forwarding16x | Player.Forwarding32x">$LOCALIZE[42105]</value>
		<value condition="Player.Rewinding2x | Player.Rewinding4x | Player.Rewinding8x | Player.Rewinding16x | Player.Rewinding32x">$LOCALIZE[42106]</value>
		<value condition="Player.Playing + !Player.DisplayAfterSeek">$LOCALIZE[42107]</value>
		<value condition="!Player.Paused + Player.DisplayAfterSeek">$LOCALIZE[31046]</value>
	</variable>
	
	<variable name="DefaultOSDButtonLabel">
		<value condition="IsEmpty(Skin.String(DefaultOSD))">$LOCALIZE[42109]</value>
		<value condition="StringCompare(Skin.String(DefaultOSD),711)">$LOCALIZE[42110]</value>
		<value condition="StringCompare(Skin.String(DefaultOSD),712)">$LOCALIZE[42111]</value>
		<value condition="StringCompare(Skin.String(DefaultOSD),714)">$LOCALIZE[31133]</value>
		<value condition="StringCompare(Skin.String(DefaultOSD),79)">$LOCALIZE[42112]</value>
		<value condition="StringCompare(Skin.String(DefaultOSD),73)">$LOCALIZE[42106]</value>
		<value condition="StringCompare(Skin.String(DefaultOSD),75)">$LOCALIZE[42113]</value>
		<value condition="StringCompare(Skin.String(DefaultOSD),76)">$LOCALIZE[42105]</value>
		<value condition="StringCompare(Skin.String(DefaultOSD),710)">$LOCALIZE[42114]</value>
		<value condition="StringCompare(Skin.String(DefaultOSD),713)">$LOCALIZE[42115]</value>
		<value condition="StringCompare(Skin.String(DefaultOSD),800)">$LOCALIZE[42116]</value>
	</variable>
	
	<variable name="DefaultOSDButtonSetting">
		<value condition="StringCompare(Skin.String(DefaultOSD),800)">Skin.SetString(DefaultOSD,711)</value>
		<value condition="StringCompare(Skin.String(DefaultOSD),711)">Skin.SetString(DefaultOSD,712)</value>
		<value condition="StringCompare(Skin.String(DefaultOSD),712)">Skin.SetString(DefaultOSD,714)</value>
		<value condition="StringCompare(Skin.String(DefaultOSD),714)">Skin.SetString(DefaultOSD,79)</value>
		<value condition="StringCompare(Skin.String(DefaultOSD),79)">Skin.SetString(DefaultOSD,73)</value>
		<value condition="StringCompare(Skin.String(DefaultOSD),73)">Skin.SetString(DefaultOSD,75)</value>
		<value condition="StringCompare(Skin.String(DefaultOSD),75)">Skin.Reset(DefaultOSD)</value>
		<value condition="IsEmpty(Skin.String(DefaultOSD))">Skin.SetString(DefaultOSD,76)</value>
		<value condition="StringCompare(Skin.String(DefaultOSD),76)">Skin.SetString(DefaultOSD,710)</value>
		<value condition="StringCompare(Skin.String(DefaultOSD),710)">Skin.SetString(DefaultOSD,713)</value>
		<value condition="StringCompare(Skin.String(DefaultOSD),713)">Skin.SetString(DefaultOSD,800)</value>
	</variable>
	
	<variable name="VideoOSDPosterLabel">
		<value condition="IsEmpty(Skin.String(VideoOSDPosterStyle))">$LOCALIZE[42058]</value>  <!-- Poster -->
		<value>$INFO[Skin.String(VideoOSDPosterStyle)]</value> 
	</variable>
	
	<variable name="VideoOSDPosterSetting">
		<value condition="IsEmpty(Skin.String(VideoOSDPosterStyle))">Skin.SetString(VideoOSDPosterStyle,$LOCALIZE[42125])</value>
		<value condition="StringCompare(Skin.String(VideoOSDPosterStyle),$LOCALIZE[42125])">Skin.SetString(VideoOSDPosterStyle,$LOCALIZE[42056])</value> <!-- Glass -->
		<value condition="StringCompare(Skin.String(VideoOSDPosterStyle),$LOCALIZE[42056])">Skin.SetString(VideoOSDPosterStyle,$LOCALIZE[42057])</value>
		<value condition="StringCompare(Skin.String(VideoOSDPosterStyle),$LOCALIZE[42057])">Skin.SetString(VideoOSDPosterStyle,$LOCALIZE[42093])</value>
		<value condition="StringCompare(Skin.String(VideoOSDPosterStyle),$LOCALIZE[42093])">Skin.Reset(VideoOSDPosterStyle)</value>
	</variable>
	
	<variable name="VideoOSDButtonPosition">
		<value condition="!StringCompare(Skin.String(VideoOSDPosterStyle),$LOCALIZE[42093])">298</value>
		<value>300</value>
	</variable>
	
</includes>